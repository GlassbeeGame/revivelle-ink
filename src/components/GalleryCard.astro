---
interface Props {
  title?: string;
  category?: string;
  beforeImage?: string;
  afterImage?: string;
  placeholder?: boolean;
}

const { 
  title = "Results Coming Soon",
  category,
  beforeImage,
  afterImage,
  placeholder = true
} = Astro.props;
---

<article class="gallery-card">
  <!-- Outer glow effect -->
  <div class="gallery-card__glow"></div>
  
  <!-- Main container -->
  <div class="gallery-card__container">
    <!-- Image area -->
    <div class="gallery-card__visual">
      {placeholder ? (
        <div class="gallery-card__placeholder">
          <div class="gallery-card__placeholder-content">
            <div class="gallery-card__placeholder-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <circle cx="8.5" cy="8.5" r="1.5"></circle>
                <polyline points="21 15 16 10 5 21"></polyline>
              </svg>
            </div>
            <div class="gallery-card__placeholder-text">
              <span class="gallery-card__placeholder-label">Before & After</span>
              <span class="gallery-card__placeholder-status">Coming Soon</span>
            </div>
          </div>
          <!-- Decorative pattern -->
          <div class="gallery-card__pattern"></div>
        </div>
      ) : (
        <div class="gallery-card__images">
          <div class="gallery-card__image gallery-card__image--before">
            <img src={beforeImage} alt={`${title} - Before`} loading="lazy" />
            <span class="gallery-card__label">Before</span>
          </div>
          <div class="gallery-card__divider"></div>
          <div class="gallery-card__image gallery-card__image--after">
            <img src={afterImage} alt={`${title} - After`} loading="lazy" />
            <span class="gallery-card__label">After</span>
          </div>
        </div>
      )}
      
      <!-- Hover overlay -->
      <div class="gallery-card__overlay">
        <span class="gallery-card__overlay-text">View Details</span>
      </div>
    </div>
    
    <!-- Content area -->
    <div class="gallery-card__content">
      <div class="gallery-card__content-inner">
        {category && <span class="gallery-card__category">{category}</span>}
        <h3 class="gallery-card__title">{title}</h3>
        <div class="gallery-card__accent-line"></div>
      </div>
    </div>
    
    <!-- Charcoal accent line -->
    <div class="gallery-card__charcoal-line"></div>
  </div>
</article>

<style>
  .gallery-card {
    position: relative;
    perspective: 1000px;
  }

  /* Outer glow */
  .gallery-card__glow {
    position: absolute;
    inset: -4px;
    border-radius: calc(var(--radius-lg) + 4px);
    background: radial-gradient(
      ellipse at center,
      rgba(201, 168, 108, 0.4) 0%,
      transparent 70%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
    filter: blur(12px);
    z-index: 0;
  }

  .gallery-card:hover .gallery-card__glow {
    opacity: 1;
  }

  /* Main container */
  .gallery-card__container {
    position: relative;
    background: var(--color-cream);
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: 
      transform 0.5s cubic-bezier(0.23, 1, 0.32, 1),
      box-shadow 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow: 
      0 4px 6px rgba(26, 26, 26, 0.06),
      0 10px 20px rgba(26, 26, 26, 0.04);
    z-index: 1;
    border: 1px solid rgba(26, 26, 26, 0.06);
  }

  .gallery-card:hover .gallery-card__container {
    transform: translateY(-10px) scale(1.02);
    box-shadow: 
      0 25px 50px rgba(26, 26, 26, 0.12),
      0 15px 30px rgba(201, 168, 108, 0.1);
  }

  /* Charcoal accent line at bottom */
  .gallery-card__charcoal-line {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, var(--color-charcoal) 50%, transparent 100%);
    opacity: 0.12;
    transition: opacity 0.4s ease;
  }

  .gallery-card:hover .gallery-card__charcoal-line {
    opacity: 0.25;
  }

  /* Visual area */
  .gallery-card__visual {
    position: relative;
    overflow: hidden;
  }

  /* Placeholder styling */
  .gallery-card__placeholder {
    aspect-ratio: 16 / 10;
    background: linear-gradient(
      135deg,
      #f5f3f0 0%,
      #ebe7e0 25%,
      #f0ece5 50%,
      #ebe7e0 75%,
      #f5f3f0 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
  }

  .gallery-card__pattern {
    position: absolute;
    inset: 0;
    background-image: 
      radial-gradient(circle at 20% 30%, rgba(201, 168, 108, 0.08) 0%, transparent 50%),
      radial-gradient(circle at 80% 70%, rgba(201, 168, 108, 0.08) 0%, transparent 50%);
    opacity: 0;
    transition: opacity 0.5s ease;
  }

  .gallery-card:hover .gallery-card__pattern {
    opacity: 1;
  }

  .gallery-card__placeholder-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-md);
    position: relative;
    z-index: 1;
    transition: opacity 0.4s ease;
  }

  .gallery-card:hover .gallery-card__placeholder-content {
    opacity: 0;
  }

  .gallery-card__placeholder-icon {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, rgba(26, 26, 26, 0.03) 0%, rgba(201, 168, 108, 0.08) 100%);
    border: 1px solid rgba(201, 168, 108, 0.25);
    border-radius: var(--radius-lg);
    color: var(--color-gold);
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .gallery-card:hover .gallery-card__placeholder-icon {
    background: var(--gradient-gold);
    border-color: var(--color-gold);
    color: var(--color-charcoal);
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 8px 24px rgba(201, 168, 108, 0.4);
  }

  .gallery-card__placeholder-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 4px;
  }

  .gallery-card__placeholder-label {
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-brown);
  }

  .gallery-card__placeholder-status {
    font-family: var(--font-display);
    font-size: 1rem;
    font-style: italic;
    color: var(--color-gold);
  }

  /* Images grid */
  .gallery-card__images {
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    position: relative;
  }

  .gallery-card__divider {
    width: 3px;
    background: var(--gradient-gold);
    z-index: 2;
  }

  .gallery-card__image {
    position: relative;
    aspect-ratio: 1;
    overflow: hidden;
  }

  .gallery-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.6s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .gallery-card:hover .gallery-card__image img {
    transform: scale(1.08);
  }

  .gallery-card__label {
    position: absolute;
    bottom: var(--spacing-sm);
    left: var(--spacing-sm);
    padding: 0.35rem 0.85rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    background: rgba(26, 26, 26, 0.9);
    color: var(--color-cream);
    border-radius: var(--radius-sm);
    backdrop-filter: blur(4px);
    border: 1px solid rgba(201, 168, 108, 0.3);
  }

  /* Hover overlay */
  .gallery-card__overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      transparent 0%,
      rgba(26, 26, 26, 0.5) 100%
    );
    display: flex;
    align-items: center;
    justify-content: center;
    opacity: 0;
    transition: opacity 0.4s ease;
  }

  .gallery-card:hover .gallery-card__overlay {
    opacity: 1;
  }

  .gallery-card__overlay-text {
    padding: 0.75rem 1.5rem;
    background: var(--gradient-gold);
    color: var(--color-charcoal);
    font-size: 0.8rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.12em;
    border-radius: var(--radius-sm);
    transform: translateY(20px);
    opacity: 0;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1) 0.1s;
    box-shadow: 0 4px 20px rgba(201, 168, 108, 0.4);
  }

  .gallery-card:hover .gallery-card__overlay-text {
    transform: translateY(0);
    opacity: 1;
  }

  /* Content area */
  .gallery-card__content {
    padding: var(--spacing-lg);
    background: linear-gradient(180deg, var(--color-cream) 0%, #faf8f5 100%);
  }

  .gallery-card__content-inner {
    text-align: center;
  }

  .gallery-card__category {
    display: inline-block;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.18em;
    color: var(--color-gold);
    margin-bottom: var(--spacing-xs);
  }

  .gallery-card__title {
    font-family: var(--font-display);
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin: 0;
    letter-spacing: -0.01em;
    transition: color 0.3s ease;
  }

  .gallery-card:hover .gallery-card__title {
    color: var(--color-gold-deep);
  }

  .gallery-card__accent-line {
    width: 40px;
    height: 2px;
    background: var(--gradient-gold);
    margin: var(--spacing-sm) auto 0;
    transform: scaleX(0);
    transition: transform 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .gallery-card:hover .gallery-card__accent-line {
    transform: scaleX(1);
  }
</style>
