---
interface Props {
  name: string;
  fullName: string;
  tagline: string;
  driveTime: string;
  distance: string;
  slug: string;
  featured?: boolean;
}

const { name, fullName, tagline, driveTime, distance, slug, featured = false } = Astro.props;
---

<a href={`/locations/${slug}`} class={`location-card ${featured ? 'location-card--featured' : ''}`}>
  <div class="location-card__accent"></div>

  <div class="location-card__inner">
    <!-- Left: Icon -->
    <div class="location-card__icon">
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"></path>
        <circle cx="12" cy="10" r="3"></circle>
      </svg>
    </div>

    <!-- Middle: Content -->
    <div class="location-card__content">
      <h3 class="location-card__title">{fullName}</h3>
      <p class="location-card__tagline">{tagline}</p>
    </div>

    <!-- Right: Meta & Badge -->
    <div class="location-card__right">
      <div class="location-card__meta">
        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
        <span>{driveTime} â€¢ {distance}</span>
      </div>
      {featured && <span class="location-card__badge">Popular</span>}
      <div class="location-card__arrow">
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <line x1="5" y1="12" x2="19" y2="12"></line>
          <polyline points="12 5 19 12 12 19"></polyline>
        </svg>
      </div>
    </div>
  </div>
</a>

<style>
  .location-card {
    position: relative;
    display: block;
    background: linear-gradient(135deg, var(--color-cream) 0%, #faf8f5 100%);
    border: 1px solid rgba(201, 168, 108, 0.15);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.03),
      0 4px 12px rgba(0, 0, 0, 0.02);
  }

  .location-card:hover {
    transform: translateY(-4px);
    border-color: var(--color-gold);
    box-shadow:
      0 12px 30px rgba(201, 168, 108, 0.15),
      0 8px 16px rgba(0, 0, 0, 0.06);
  }

  /* Gold accent bar */
  .location-card__accent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-gold);
    transform: scaleX(0.4);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .location-card:hover .location-card__accent {
    transform: scaleX(1);
  }

  .location-card--featured .location-card__accent {
    transform: scaleX(0.7);
  }

  /* Horizontal inner layout */
  .location-card__inner {
    display: flex;
    align-items: center;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg) var(--spacing-xl);
    padding-top: calc(var(--spacing-lg) + 3px);
  }

  @media (max-width: 600px) {
    .location-card__inner {
      padding: var(--spacing-md) var(--spacing-lg);
      padding-top: calc(var(--spacing-md) + 3px);
    }
  }

  /* Icon */
  .location-card__icon {
    flex-shrink: 0;
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    border-radius: var(--radius-md);
    color: var(--color-charcoal);
    box-shadow: 0 4px 12px rgba(201, 168, 108, 0.3);
    transition: all 0.3s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .location-card:hover .location-card__icon {
    transform: scale(1.08);
    box-shadow: 0 6px 16px rgba(201, 168, 108, 0.45);
  }

  /* Content - flexible middle section */
  .location-card__content {
    flex: 1;
    min-width: 0; /* Allow text to truncate if needed */
  }

  .location-card__title {
    font-family: var(--font-heading);
    font-size: 1.35rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: 0.25rem;
    transition: color 0.3s ease;
  }

  .location-card:hover .location-card__title {
    color: var(--color-gold-deep);
  }

  .location-card__tagline {
    font-size: 0.9rem;
    color: var(--color-brown-light);
    line-height: 1.5;
    margin: 0;
  }

  /* Right side - meta, badge, arrow */
  .location-card__right {
    flex-shrink: 0;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: var(--spacing-xs);
  }

  .location-card__meta {
    display: flex;
    align-items: center;
    gap: 6px;
    font-size: 0.85rem;
    color: var(--color-taupe);
    font-weight: 500;
  }

  .location-card__meta svg {
    color: var(--color-gold);
    flex-shrink: 0;
  }

  .location-card__badge {
    padding: 0.35rem 0.75rem;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    background: var(--gradient-gold);
    color: var(--color-charcoal);
    border-radius: var(--radius-sm);
    box-shadow: 0 2px 6px rgba(201, 168, 108, 0.3);
  }

  .location-card__arrow {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-gold);
    transition: transform 0.3s ease;
  }

  .location-card:hover .location-card__arrow {
    transform: translateX(4px);
  }

  /* Featured card styling */
  .location-card--featured {
    border-color: rgba(201, 168, 108, 0.25);
    background: linear-gradient(135deg, rgba(201, 168, 108, 0.05) 0%, var(--color-cream) 100%);
  }

  .location-card--featured:hover {
    border-color: var(--color-gold-deep);
  }

  /* Mobile adjustments */
  @media (max-width: 600px) {
    .location-card__inner {
      gap: var(--spacing-md);
    }

    .location-card__icon {
      width: 42px;
      height: 42px;
    }

    .location-card__title {
      font-size: 1.15rem;
    }

    .location-card__tagline {
      font-size: 0.85rem;
    }

    .location-card__right {
      align-items: flex-end;
    }

    .location-card__meta {
      font-size: 0.75rem;
    }

    .location-card__arrow {
      display: none; /* Hide arrow on mobile for cleaner look */
    }
  }
</style>
