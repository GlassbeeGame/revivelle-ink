---
interface Props {
  title: string;
  subtitle?: string;
  dark?: boolean;
  size?: 'small' | 'medium' | 'large';
  align?: 'left' | 'center';
  goldAccent?: boolean;
}

const { 
  title, 
  subtitle,
  dark = false,
  size = 'medium',
  align = 'center',
  goldAccent = true
} = Astro.props;
---

<section class={`hero hero--${size} ${dark ? 'hero--dark' : ''} hero--${align}`}>
  <!-- Decorative elements -->
  <div class="hero__decoration">
    <div class="hero__decoration-line hero__decoration-line--left"></div>
    <div class="hero__decoration-line hero__decoration-line--right"></div>
  </div>
  
  {dark && (
    <div class="hero__particles">
      {Array.from({ length: 8 }).map((_, i) => (
        <div 
          class="hero__particle" 
          style={`left: ${10 + Math.random() * 80}%; animation-delay: ${Math.random() * 5}s;`}
        />
      ))}
    </div>
  )}
  
  <div class="container">
    <div class="hero__content">
      <h1 class="hero__title">
        <span class="hero__title-text">{title}</span>
        {goldAccent && <span class="hero__title-underline"></span>}
      </h1>
      {subtitle && <p class="hero__subtitle">{subtitle}</p>}
      <slot />
    </div>
  </div>
</section>

<style>
  .hero {
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    overflow: hidden;
    background: linear-gradient(180deg, var(--color-cream-dark) 0%, var(--color-cream) 100%);
  }

  .hero--dark {
    background: linear-gradient(180deg, var(--color-charcoal-deep) 0%, var(--color-charcoal) 100%);
  }

  .hero--small {
    padding: calc(100px + var(--spacing-xl)) 0 var(--spacing-2xl);
    min-height: auto;
  }

  .hero--medium {
    padding: calc(100px + var(--spacing-2xl)) 0 var(--spacing-3xl);
    min-height: 45vh;
  }

  .hero--large {
    padding: calc(100px + var(--spacing-3xl)) 0 var(--spacing-4xl);
    min-height: 60vh;
  }

  /* Decorative lines */
  .hero__decoration {
    position: absolute;
    inset: 0;
    pointer-events: none;
    overflow: hidden;
  }

  .hero__decoration-line {
    position: absolute;
    top: 50%;
    width: 150px;
    height: 1px;
    background: linear-gradient(90deg, transparent 0%, var(--color-gold) 50%, transparent 100%);
    opacity: 0.4;
  }

  .hero__decoration-line--left {
    left: 5%;
    transform: translateY(-50%);
  }

  .hero__decoration-line--right {
    right: 5%;
    transform: translateY(-50%);
  }

  @media (max-width: 900px) {
    .hero__decoration-line {
      display: none;
    }
  }

  /* Particles for dark hero */
  .hero__particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .hero__particle {
    position: absolute;
    bottom: 0;
    width: 4px;
    height: 4px;
    background: var(--color-gold);
    border-radius: 50%;
    opacity: 0;
    animation: heroParticle 10s ease-in-out infinite;
  }

  @keyframes heroParticle {
    0%, 100% {
      opacity: 0;
      transform: translateY(0) scale(0);
    }
    10% {
      opacity: 0.5;
      transform: scale(1);
    }
    90% {
      opacity: 0.2;
    }
    100% {
      transform: translateY(-50vh) scale(0.5);
    }
  }

  .hero__content {
    max-width: 900px;
    position: relative;
    z-index: 1;
  }

  .hero--center .hero__content {
    text-align: center;
    margin: 0 auto;
  }

  .hero--left .hero__content {
    text-align: left;
  }

  .hero__title {
    font-family: var(--font-heading);
    font-weight: 300;
    line-height: 1.15;
    margin-bottom: var(--spacing-lg);
    color: var(--color-charcoal);
    position: relative;
    display: inline-block;
  }

  .hero--center .hero__title {
    display: block;
  }

  .hero--dark .hero__title {
    color: var(--color-cream);
  }

  .hero--small .hero__title {
    font-size: clamp(2rem, 5vw, 3rem);
  }

  .hero--medium .hero__title {
    font-size: clamp(2.5rem, 6vw, 4rem);
  }

  .hero--large .hero__title {
    font-size: clamp(3rem, 7vw, 5rem);
  }

  .hero__title-text {
    display: inline;
  }

  .hero__title-underline {
    display: block;
    width: 80px;
    height: 2px;
    background: var(--gradient-gold);
    margin-top: var(--spacing-md);
    position: relative;
  }

  .hero--center .hero__title-underline {
    margin-left: auto;
    margin-right: auto;
  }

  .hero__title-underline::before {
    content: 'âœ¦';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: var(--color-gold);
    font-size: 0.6rem;
    background: var(--color-cream-dark);
    padding: 0 8px;
  }

  .hero--dark .hero__title-underline::before {
    background: var(--color-charcoal);
  }

  .hero__subtitle {
    font-family: var(--font-body);
    font-size: clamp(1.05rem, 2vw, 1.25rem);
    font-weight: 400;
    color: var(--color-taupe);
    line-height: 1.8;
    margin-bottom: var(--spacing-xl);
    max-width: 650px;
  }

  .hero--center .hero__subtitle {
    margin-left: auto;
    margin-right: auto;
  }

  .hero--dark .hero__subtitle {
    color: var(--color-blush);
  }
</style>
