---
interface Props {
  title: string;
  description: string;
  price?: string;
  icon?: string;
  href?: string;
}

const { title, description, price, icon, href } = Astro.props;
---

<article class="service-card">
  <div class="service-card__gold-border"></div>
  <div class="service-card__inner">
    {icon && (
      <div class="service-card__icon">
        <span>{icon}</span>
      </div>
    )}
    <div class="service-card__content">
      <h3 class="service-card__title">{title}</h3>
      <p class="service-card__description">{description}</p>
      {price && (
        <p class="service-card__price">{price}</p>
      )}
      {href && (
        <a href={href} class="service-card__link">
          <span>Learn More</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .service-card {
    position: relative;
    height: 100%;
    border-radius: var(--radius-lg);
    padding: 2px;
    background: transparent;
    transition: transform var(--transition-medium);
  }

  /* Animated gold border */
  .service-card__gold-border {
    position: absolute;
    inset: 0;
    border-radius: var(--radius-lg);
    background: linear-gradient(
      135deg,
      var(--color-gold) 0%,
      var(--color-gold-shimmer) 25%,
      var(--color-gold) 50%,
      var(--color-gold-shimmer) 75%,
      var(--color-gold) 100%
    );
    background-size: 300% 300%;
    opacity: 0;
    transition: opacity var(--transition-medium);
    animation: borderRotate 6s linear infinite paused;
  }

  @keyframes borderRotate {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .service-card:hover .service-card__gold-border {
    opacity: 1;
    animation-play-state: running;
  }

  .service-card:hover {
    transform: translateY(-8px);
  }

  .service-card__inner {
    position: relative;
    background: var(--color-cream);
    border-radius: calc(var(--radius-lg) - 2px);
    padding: var(--spacing-xl);
    height: 100%;
    display: flex;
    flex-direction: column;
    transition: box-shadow var(--transition-medium);
  }

  .service-card:hover .service-card__inner {
    box-shadow: var(--shadow-gold);
  }

  .service-card__icon {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, var(--color-gold-pale) 0%, var(--color-cream) 100%);
    border: 1px solid rgba(201, 168, 108, 0.3);
    border-radius: var(--radius-lg);
    margin-bottom: var(--spacing-lg);
    font-size: 1.75rem;
    transition: all var(--transition-medium);
  }

  .service-card:hover .service-card__icon {
    background: var(--gradient-gold);
    border-color: var(--color-gold);
    transform: scale(1.05);
    box-shadow: var(--shadow-gold);
  }

  .service-card__content {
    flex: 1;
    display: flex;
    flex-direction: column;
  }

  .service-card__title {
    font-family: var(--font-heading);
    font-size: 1.6rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-sm);
    transition: color var(--transition-fast);
  }

  .service-card:hover .service-card__title {
    color: var(--color-gold-deep);
  }

  .service-card__description {
    font-size: 1rem;
    color: var(--color-brown-light);
    line-height: 1.8;
    flex: 1;
    margin-bottom: var(--spacing-md);
  }

  .service-card__price {
    font-family: var(--font-heading);
    font-size: 1.2rem;
    font-weight: 600;
    background: var(--gradient-gold-text);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-md);
  }

  .service-card__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-gold);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    margin-top: auto;
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(201, 168, 108, 0.2);
    transition: all var(--transition-fast);
  }

  .service-card__link:hover {
    color: var(--color-gold-deep);
    gap: 1rem;
  }

  .service-card__link svg {
    transition: transform var(--transition-fast);
  }

  .service-card__link:hover svg {
    transform: translateX(4px);
  }
</style>
