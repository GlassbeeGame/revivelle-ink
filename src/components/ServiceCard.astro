---
interface Props {
  title: string;
  description: string;
  price?: string;
  href?: string;
}

const { title, description, price, href } = Astro.props;
---

<article class="service-card">
  <!-- Animated border glow -->
  <div class="service-card__glow"></div>
  
  <!-- Main card container -->
  <div class="service-card__container">
    <!-- Top accent bar -->
    <div class="service-card__accent-bar"></div>
    
    <!-- Charcoal accent line -->
    <div class="service-card__charcoal-line"></div>
    
    <!-- Card content -->
    <div class="service-card__content">
      <div class="service-card__header">
        <div class="service-card__number">
          <span></span>
        </div>
        <h3 class="service-card__title">{title}</h3>
      </div>
      
      <p class="service-card__description">{description}</p>
      
      {price && (
        <p class="service-card__price">{price}</p>
      )}
      
      {href && (
        <a href={href} class="service-card__link">
          <span class="service-card__link-text">Learn More</span>
          <span class="service-card__link-arrow">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <line x1="5" y1="12" x2="19" y2="12"></line>
              <polyline points="12 5 19 12 12 19"></polyline>
            </svg>
          </span>
        </a>
      )}
    </div>
  </div>
</article>

<style>
  .service-card {
    position: relative;
    height: 100%;
    perspective: 1000px;
  }

  /* Animated outer glow */
  .service-card__glow {
    position: absolute;
    inset: -2px;
    border-radius: calc(var(--radius-lg) + 2px);
    background: linear-gradient(
      135deg,
      transparent 0%,
      rgba(201, 168, 108, 0.3) 50%,
      transparent 100%
    );
    opacity: 0;
    transition: opacity 0.5s ease;
    filter: blur(8px);
    z-index: 0;
  }

  .service-card:hover .service-card__glow {
    opacity: 1;
  }

  /* Main container with 3D transform */
  .service-card__container {
    position: relative;
    height: 100%;
    background: linear-gradient(
      180deg,
      var(--color-cream) 0%,
      #faf8f5 50%,
      var(--color-cream) 100%
    );
    border-radius: var(--radius-lg);
    overflow: hidden;
    transition: 
      transform 0.5s cubic-bezier(0.23, 1, 0.32, 1),
      box-shadow 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow: 
      0 4px 6px rgba(26, 26, 26, 0.06),
      0 10px 20px rgba(26, 26, 26, 0.04);
    z-index: 1;
    border: 1px solid rgba(26, 26, 26, 0.06);
  }

  .service-card:hover .service-card__container {
    transform: translateY(-12px) rotateX(2deg);
    box-shadow: 
      0 20px 40px rgba(26, 26, 26, 0.12),
      0 15px 30px rgba(201, 168, 108, 0.1),
      0 5px 15px rgba(26, 26, 26, 0.06),
      inset 0 1px 0 rgba(255, 255, 255, 0.8);
  }

  /* Top accent bar with gradient */
  .service-card__accent-bar {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-gold);
    transform: scaleX(0.3);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .service-card:hover .service-card__accent-bar {
    transform: scaleX(1);
  }

  /* Charcoal accent line at bottom */
  .service-card__charcoal-line {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, transparent 0%, var(--color-charcoal) 50%, transparent 100%);
    opacity: 0.15;
    transition: opacity 0.4s ease;
  }

  .service-card:hover .service-card__charcoal-line {
    opacity: 0.3;
  }

  /* Content area */
  .service-card__content {
    padding: var(--spacing-xl);
    padding-top: calc(var(--spacing-xl) + 4px);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .service-card__header {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  /* Decorative number/dot */
  .service-card__number {
    flex-shrink: 0;
    width: 12px;
    height: 12px;
    margin-top: 8px;
    position: relative;
  }

  .service-card__number span {
    display: block;
    width: 100%;
    height: 100%;
    background: var(--gradient-gold);
    border-radius: 50%;
    transition: transform 0.4s cubic-bezier(0.34, 1.56, 0.64, 1);
    box-shadow: 0 2px 8px rgba(201, 168, 108, 0.4);
  }

  .service-card:hover .service-card__number span {
    transform: scale(1.3);
    box-shadow: 0 4px 16px rgba(201, 168, 108, 0.6);
  }

  .service-card__title {
    font-family: var(--font-display);
    font-size: 1.5rem;
    font-weight: 500;
    color: var(--color-charcoal);
    line-height: 1.3;
    margin: 0;
    letter-spacing: -0.01em;
    transition: color 0.3s ease;
  }

  .service-card:hover .service-card__title {
    color: var(--color-gold-deep);
  }

  .service-card__description {
    font-size: 1rem;
    color: var(--color-brown);
    line-height: 1.8;
    flex: 1;
    margin-bottom: var(--spacing-lg);
  }

  .service-card__price {
    font-family: var(--font-heading);
    font-size: 1.15rem;
    font-weight: 600;
    background: var(--gradient-gold-text);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin-bottom: var(--spacing-md);
  }

  /* Link with animated arrow */
  .service-card__link {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-sm);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-gold);
    text-transform: uppercase;
    letter-spacing: 0.12em;
    margin-top: auto;
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(26, 26, 26, 0.1);
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .service-card__link-text {
    transition: transform 0.3s ease;
  }

  .service-card__link-arrow {
    display: flex;
    align-items: center;
    transition: transform 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
  }

  .service-card__link:hover {
    color: var(--color-gold-deep);
  }

  .service-card__link:hover .service-card__link-text {
    transform: translateX(-4px);
  }

  .service-card__link:hover .service-card__link-arrow {
    transform: translateX(8px);
  }

  /* Focus state */
  .service-card:focus-within {
    outline: 2px solid var(--color-gold);
    outline-offset: 4px;
    border-radius: var(--radius-lg);
  }
</style>
