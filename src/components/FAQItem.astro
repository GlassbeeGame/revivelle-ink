---
interface Props {
  question: string;
  answer: string;
  open?: boolean;
}

const { question, answer, open = false } = Astro.props;
---

<details class="faq-item" open={open}>
  <summary class="faq-item__question">
    <span class="faq-item__question-text">{question}</span>
    <span class="faq-item__icon">
      <span class="faq-item__icon-line faq-item__icon-line--h"></span>
      <span class="faq-item__icon-line faq-item__icon-line--v"></span>
    </span>
  </summary>
  <div class="faq-item__answer">
    <p>{answer}</p>
  </div>
</details>

<style>
  .faq-item {
    border-bottom: 1px solid rgba(201, 168, 108, 0.2);
    transition: all var(--transition-medium);
  }

  .faq-item:last-child {
    border-bottom: none;
  }

  .faq-item[open] {
    background: linear-gradient(135deg, rgba(201, 168, 108, 0.05) 0%, transparent 100%);
    border-radius: var(--radius-md);
    margin: var(--spacing-xs) 0;
    padding: 0 var(--spacing-sm);
  }

  .faq-item__question {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg) var(--spacing-sm);
    cursor: pointer;
    list-style: none;
    font-family: var(--font-heading);
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--color-charcoal);
    transition: color var(--transition-fast);
  }

  .faq-item__question::-webkit-details-marker {
    display: none;
  }

  .faq-item__question:hover {
    color: var(--color-gold-deep);
  }

  .faq-item__question-text {
    flex: 1;
  }

  .faq-item__icon {
    flex-shrink: 0;
    position: relative;
    width: 36px;
    height: 36px;
    border-radius: var(--radius-full);
    background: linear-gradient(135deg, var(--color-gold-pale) 0%, var(--color-cream) 100%);
    border: 1px solid rgba(201, 168, 108, 0.3);
    transition: all var(--transition-medium);
  }

  .faq-item:hover .faq-item__icon {
    background: var(--gradient-gold);
    border-color: var(--color-gold);
    box-shadow: var(--shadow-gold);
  }

  .faq-item[open] .faq-item__icon {
    background: var(--gradient-gold);
    border-color: var(--color-gold);
    transform: rotate(45deg);
  }

  .faq-item__icon-line {
    position: absolute;
    background: var(--color-gold);
    transition: all var(--transition-medium);
  }

  .faq-item__icon-line--h {
    top: 50%;
    left: 50%;
    width: 14px;
    height: 2px;
    transform: translate(-50%, -50%);
  }

  .faq-item__icon-line--v {
    top: 50%;
    left: 50%;
    width: 2px;
    height: 14px;
    transform: translate(-50%, -50%);
  }

  .faq-item[open] .faq-item__icon-line,
  .faq-item:hover .faq-item__icon-line {
    background: var(--color-charcoal);
  }

  .faq-item[open] .faq-item__icon-line--v {
    opacity: 0;
    transform: translate(-50%, -50%) rotate(90deg);
  }

  .faq-item__answer {
    padding: 0 var(--spacing-sm) var(--spacing-lg);
    animation: answerReveal 0.4s ease;
  }

  @keyframes answerReveal {
    from {
      opacity: 0;
      transform: translateY(-10px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .faq-item__answer p {
    font-size: 1rem;
    color: var(--color-brown-light);
    line-height: 1.9;
    margin: 0;
    padding-left: var(--spacing-md);
    border-left: 2px solid var(--color-gold);
  }
</style>
