---
const currentYear = new Date().getFullYear();

const quickLinks = [
  { href: '/services', label: 'Services' },
  { href: '/gallery', label: 'Gallery' },
  { href: '/about', label: 'About' },
  { href: '/contact', label: 'Contact' },
];

const services = [
  'Stretch Mark Camouflage',
  'Inkless Scar Revision',
  'Scar Camouflage',
];
---

<footer class="footer">
  <!-- Gold accent line -->
  <div class="footer__accent"></div>
  
  <div class="footer__main">
    <div class="container">
      <div class="footer__grid">
        <!-- Brand Column -->
        <div class="footer__brand">
          <a href="/" class="footer__logo">
            <img src="/logo-light.svg" alt="Revivelle Ink" />
          </a>
          <p class="footer__tagline">
            Precision <span class="footer__dot">✦</span> Restoration <span class="footer__dot">✦</span> Confidence
          </p>
          <p class="footer__description">
            Boutique paramedical tattoo studio specializing in stretch mark and scar camouflage in Sparks, Nevada.
          </p>
        </div>

        <!-- Quick Links -->
        <div class="footer__column">
          <h4 class="footer__heading">Quick Links</h4>
          <ul class="footer__list">
            {quickLinks.map((link) => (
              <li>
                <a href={link.href} class="footer__link">
                  <span class="footer__link-arrow">→</span>
                  {link.label}
                </a>
              </li>
            ))}
          </ul>
        </div>

        <!-- Services -->
        <div class="footer__column">
          <h4 class="footer__heading">Services</h4>
          <ul class="footer__list">
            {services.map((service) => (
              <li class="footer__service">
                <span class="footer__service-dot"></span>
                {service}
              </li>
            ))}
          </ul>
        </div>

        <!-- Contact -->
        <div class="footer__column">
          <h4 class="footer__heading">Contact</h4>
          <ul class="footer__list footer__contact">
            <li>
              <span class="footer__label">Location</span>
              <span>Sparks, Nevada</span>
            </li>
            <li>
              <span class="footer__label">Serving</span>
              <span>Sparks, Reno & Washoe County</span>
            </li>
            <li>
              <a href="/contact" class="footer__link footer__link--cta">
                Get in Touch
                <span class="footer__link-arrow">→</span>
              </a>
            </li>
          </ul>
          
          <!-- Social Links -->
          <div class="footer__social">
            <a href="https://instagram.com/revivelle.ink" target="_blank" rel="noopener noreferrer" class="footer__social-link" aria-label="Instagram">
              <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                <rect x="2" y="2" width="20" height="20" rx="5" ry="5"></rect>
                <path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"></path>
                <line x1="17.5" y1="6.5" x2="17.51" y2="6.5"></line>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Bottom Bar -->
  <div class="footer__bottom">
    <div class="container">
      <p class="footer__copyright">
        © {currentYear} Revivelle Ink. All rights reserved.
      </p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: linear-gradient(180deg, var(--color-charcoal) 0%, var(--color-charcoal-deep) 100%);
    color: var(--color-cream);
    position: relative;
  }

  .footer__accent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-gold);
  }

  .footer__main {
    padding: var(--spacing-3xl) 0 var(--spacing-xl);
  }

  .footer__grid {
    display: grid;
    grid-template-columns: 1.5fr repeat(3, 1fr);
    gap: var(--spacing-2xl);
  }

  .footer__brand {
    padding-right: var(--spacing-xl);
  }

  .footer__logo img {
    height: 65px;
    width: auto;
    margin-bottom: var(--spacing-lg);
    filter: brightness(1.1);
    transition: all var(--transition-medium);
  }

  .footer__logo:hover img {
    filter: brightness(1.2) drop-shadow(0 4px 15px rgba(201, 168, 108, 0.4));
  }

  .footer__tagline {
    font-family: var(--font-heading);
    font-size: 0.95rem;
    font-style: italic;
    color: var(--color-blush);
    margin-bottom: var(--spacing-md);
    display: flex;
    align-items: center;
    gap: 0.5rem;
    flex-wrap: wrap;
  }

  .footer__dot {
    color: var(--color-gold);
    font-style: normal;
    font-size: 0.6rem;
  }

  .footer__description {
    font-size: 0.95rem;
    color: var(--color-taupe);
    line-height: 1.8;
    margin-bottom: 0;
  }

  .footer__heading {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-gold);
    margin-bottom: var(--spacing-lg);
    letter-spacing: 0.02em;
    position: relative;
    display: inline-block;
  }

  .footer__heading::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 30px;
    height: 1px;
    background: var(--gradient-gold);
  }

  .footer__list {
    list-style: none;
  }

  .footer__list li {
    margin-bottom: var(--spacing-sm);
  }

  .footer__link {
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.95rem;
    color: var(--color-cream);
    transition: all var(--transition-fast);
  }

  .footer__link-arrow {
    color: var(--color-gold);
    opacity: 0;
    transform: translateX(-5px);
    transition: all var(--transition-fast);
  }

  .footer__link:hover {
    color: var(--color-gold);
    transform: translateX(5px);
  }

  .footer__link:hover .footer__link-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .footer__link--cta {
    margin-top: var(--spacing-sm);
    font-weight: 600;
  }

  .footer__link--cta .footer__link-arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .footer__link--cta:hover .footer__link-arrow {
    transform: translateX(5px);
  }

  .footer__service {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.95rem;
    color: var(--color-taupe);
  }

  .footer__service-dot {
    width: 6px;
    height: 6px;
    background: var(--color-gold);
    border-radius: 50%;
    flex-shrink: 0;
  }

  .footer__contact li {
    display: flex;
    flex-direction: column;
    gap: 4px;
    margin-bottom: var(--spacing-md);
  }

  .footer__label {
    font-size: 0.7rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-gold);
  }

  .footer__social {
    display: flex;
    gap: var(--spacing-sm);
    margin-top: var(--spacing-lg);
  }

  .footer__social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 44px;
    height: 44px;
    border: 1px solid rgba(201, 168, 108, 0.4);
    border-radius: var(--radius-full);
    color: var(--color-cream);
    transition: all var(--transition-medium);
  }

  .footer__social-link:hover {
    background: var(--gradient-gold);
    border-color: var(--color-gold);
    color: var(--color-charcoal);
    transform: translateY(-3px);
    box-shadow: var(--shadow-gold);
  }

  .footer__bottom {
    padding: var(--spacing-lg) 0;
    border-top: 1px solid rgba(201, 168, 108, 0.15);
  }

  .footer__copyright {
    font-size: 0.85rem;
    color: var(--color-taupe);
    text-align: center;
    margin: 0;
  }

  /* Responsive */
  @media (max-width: 1000px) {
    .footer__grid {
      grid-template-columns: repeat(2, 1fr);
      gap: var(--spacing-xl) var(--spacing-lg);
    }

    .footer__brand {
      grid-column: 1 / -1;
      padding-right: 0;
      text-align: center;
    }

    .footer__tagline {
      justify-content: center;
    }

    .footer__logo img {
      margin: 0 auto var(--spacing-lg);
    }
  }

  @media (max-width: 600px) {
    .footer__grid {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .footer__heading::after {
      left: 50%;
      transform: translateX(-50%);
    }

    .footer__service {
      justify-content: center;
    }

    .footer__social {
      justify-content: center;
    }

    .footer__contact li {
      align-items: center;
    }
  }
</style>
