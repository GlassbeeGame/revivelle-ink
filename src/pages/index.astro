---
import Layout from '../layouts/Layout.astro';
import ShimmerLogo from '../components/ShimmerLogo.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Button from '../components/Button.astro';

const services = [
  {
    title: 'Stretch Mark Camouflage',
    description: 'A pigment-based tattoo that blends stretch marks into your natural skin tone for a smoother, more even appearance. Ideal for white or light stretch marks.',
    icon: 'âœ¨',
    href: '/services'
  },
  {
    title: 'Inkless Scar Revision',
    description: 'A pigment-free treatment using custom serums and controlled needling to stimulate collagen and soften stretch mark and scar texture naturally.',
    icon: 'ðŸŒ¸',
    href: '/services'
  },
  {
    title: 'Scar Camouflage',
    description: 'Improves the appearance of surgical scars, injury scars, and texture irregularities through specialized paramedical tattooing techniques.',
    icon: 'ðŸ’«',
    href: '/services'
  }
];

const benefits = [
  'Certified in paramedical tattooing & PMU',
  'Specializing in stretch mark & scar camouflage',
  'Soft, natural results for all skin tones',
  'High sanitation standards (Washoe County compliant)',
  'Comfortable private suite in Sparks',
  'Warm, judgment-free care rooted in compassion'
];

const serviceAreas = [
  'Sparks',
  'Reno', 
  'Spanish Springs',
  'Sun Valley',
  'South Reno',
  'North Valleys',
  'Washoe County'
];
---

<Layout 
  title="Stretch Mark & Scar Camouflage Tattoo in Sparks, NV | Revivelle Ink"
  description="Transform stretch marks and scars with inkless camouflage tattooing at Revivelle Ink in Sparks, NV. Safe, natural, long-lasting results for all skin tones. Book your consultation today."
>
  <!-- Hero Section with Animated Logo -->
  <section class="hero-home">
    <!-- Elegant background with warm gradient -->
    <div class="hero-home__background">
      <div class="hero-home__gradient"></div>
      <div class="hero-home__texture"></div>
    </div>
    
    <div class="hero-home__content">
      <ShimmerLogo />
      <div class="hero-home__cta">
        <Button href="/contact" variant="gold-glow" size="large">Book Consultation</Button>
        <Button href="/services" variant="outline" size="large">Explore Services</Button>
      </div>
    </div>
    
    <div class="hero-home__scroll">
      <span>Discover More</span>
      <div class="hero-home__scroll-indicator">
        <div class="hero-home__scroll-dot"></div>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="section intro">
    <div class="container container--narrow">
      <div class="intro__content">
        <span class="intro__eyebrow">Welcome to Revivelle Ink</span>
        <h2 class="intro__heading">
          Natural, Beautiful <span class="text-gradient-gold">Skin Revision</span>
        </h2>
        <p class="intro__text">
          Revivelle Ink is a boutique paramedical and cosmetic tattoo studio located in Sparks, Nevada, specializing in stretch mark camouflage and inkless scar revision services designed to restore confidence and enhance your natural beauty.
        </p>
        <p class="intro__text">
          My approach is rooted in precision, softness, and artistry. Whether you're looking to blend stretch marks, soften scars, or restore your skin's appearance, Revivelle Ink provides a safe, private, and welcoming environment where you can feel truly seen and cared for.
        </p>
        <div class="intro__divider">
          <span class="intro__divider-line"></span>
          <span class="intro__divider-icon">âœ¦</span>
          <span class="intro__divider-line"></span>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview Section -->
  <section class="section section--gold-tint services-preview">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-eyebrow">Our Expertise</span>
        <h2>What I Specialize In</h2>
        <p class="section-subtitle">
          Every service is tailored to your skin type, tone, texture, and personal goals â€” no one-size-fits-all here.
        </p>
      </div>
      <div class="services-grid">
        {services.map((service, i) => (
          <div class="services-grid__item" style={`animation-delay: ${i * 0.15}s`}>
            <ServiceCard 
              title={service.title}
              description={service.description}
              icon={service.icon}
              href={service.href}
            />
          </div>
        ))}
      </div>
      <div class="text-center mt-2xl">
        <Button href="/services" variant="dark">View All Services</Button>
      </div>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="section why-choose">
    <div class="container">
      <div class="why-choose__grid">
        <div class="why-choose__content">
          <span class="section-eyebrow">The Revivelle Difference</span>
          <h2>Why Choose <span class="text-gradient-gold">Revivelle Ink</span>?</h2>
          <p class="why-choose__intro">
            Your treatment is not just cosmetic â€” it's emotional, empowering, and transformative.
          </p>
          <ul class="why-choose__list">
            {benefits.map((benefit, i) => (
              <li class="why-choose__item" style={`animation-delay: ${i * 0.1}s`}>
                <span class="why-choose__icon">
                  <span class="why-choose__icon-check">âœ“</span>
                </span>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
          <div class="why-choose__cta">
            <Button href="/about" variant="outline">Meet Your Artist</Button>
          </div>
        </div>
        <div class="why-choose__image">
          <div class="why-choose__image-frame">
            <div class="why-choose__image-placeholder">
              <span>Studio Photo</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="section section--dark service-areas">
    <div class="service-areas__particles">
      {Array.from({ length: 12 }).map((_, i) => (
        <div 
          class="service-areas__particle" 
          style={`left: ${5 + Math.random() * 90}%; animation-delay: ${Math.random() * 8}s;`}
        />
      ))}
    </div>
    <div class="container">
      <div class="service-areas__content text-center">
        <span class="section-eyebrow section-eyebrow--light">Our Reach</span>
        <h2>Serving Sparks, Reno & All of Washoe County</h2>
        <p class="service-areas__subtitle">
          Revivelle Ink proudly provides camouflage tattooing and inkless scar revision to clients throughout Northern Nevada.
        </p>
        <div class="service-areas__list">
          {serviceAreas.map((area, index) => (
            <span class="service-areas__item">
              {area}
              {index < serviceAreas.length - 1 && <span class="service-areas__dot">âœ¦</span>}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-section">
    <div class="container container--narrow">
      <div class="cta-box">
        <div class="cta-box__glow"></div>
        <div class="cta-box__content">
          <span class="section-eyebrow section-eyebrow--light">Begin Your Journey</span>
          <h2>Ready for Your Transformation?</h2>
          <p>
            You deserve to feel beautiful in your skin. Whether you're ready to revise stretch marks, blend scars, or simply learn more, your journey starts here.
          </p>
          <div class="cta-box__buttons">
            <Button href="/contact" variant="gold-glow" size="large">Book Consultation</Button>
            <Button href="/gallery" variant="outline" size="large">View Results</Button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Home Section */
  .hero-home {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-home__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-home__gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      var(--color-cream) 0%,
      var(--color-cream-warm) 30%,
      var(--color-gold-pale) 60%,
      var(--color-cream-warm) 80%,
      var(--color-cream) 100%
    );
  }

  .hero-home__texture {
    position: absolute;
    inset: 0;
    background-image: radial-gradient(circle at 20% 80%, rgba(201, 168, 108, 0.08) 0%, transparent 50%),
                      radial-gradient(circle at 80% 20%, rgba(232, 196, 188, 0.08) 0%, transparent 50%),
                      radial-gradient(circle at 50% 50%, rgba(201, 168, 108, 0.05) 0%, transparent 70%);
  }

  .hero-home__content {
    position: relative;
    z-index: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xl);
    padding: var(--spacing-xl);
  }

  .hero-home__cta {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    justify-content: center;
    opacity: 0;
    animation: fadeInUp 0.8s ease 2.2s forwards;
  }

  .hero-home__scroll {
    position: absolute;
    bottom: var(--spacing-xl);
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-sm);
    opacity: 0;
    animation: fadeIn 1s ease 2.8s forwards;
  }

  .hero-home__scroll span {
    font-size: 0.75rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-taupe);
  }

  .hero-home__scroll-indicator {
    width: 24px;
    height: 40px;
    border: 2px solid var(--color-gold);
    border-radius: 12px;
    position: relative;
    opacity: 0.6;
  }

  .hero-home__scroll-dot {
    position: absolute;
    top: 6px;
    left: 50%;
    transform: translateX(-50%);
    width: 4px;
    height: 8px;
    background: var(--color-gold);
    border-radius: 2px;
    animation: scrollDot 2s ease-in-out infinite;
  }

  @keyframes scrollDot {
    0%, 100% { top: 6px; opacity: 1; }
    50% { top: 22px; opacity: 0.3; }
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes fadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
  }

  /* Section Eyebrow */
  .section-eyebrow {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .section-eyebrow--light {
    color: var(--color-blush);
  }

  /* Intro Section */
  .intro__content {
    text-align: center;
  }

  .intro__eyebrow {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .intro__heading {
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    margin-bottom: var(--spacing-xl);
  }

  .intro__text {
    font-size: 1.1rem;
    color: var(--color-brown-light);
    line-height: 2;
  }

  .intro__divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-md);
    margin-top: var(--spacing-2xl);
  }

  .intro__divider-line {
    width: 60px;
    height: 1px;
    background: var(--gradient-gold);
  }

  .intro__divider-icon {
    color: var(--color-gold);
    font-size: 0.875rem;
  }

  /* Services Preview */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(340px, 1fr));
    gap: var(--spacing-xl);
  }

  .services-grid__item {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  /* Why Choose Section */
  .why-choose__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-3xl);
    align-items: center;
  }

  @media (max-width: 1000px) {
    .why-choose__grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
    }
  }

  .why-choose__content h2 {
    margin-bottom: var(--spacing-md);
  }

  .why-choose__intro {
    font-size: 1.15rem;
    color: var(--color-brown-light);
    margin-bottom: var(--spacing-xl);
    line-height: 1.8;
  }

  .why-choose__list {
    list-style: none;
    margin-bottom: var(--spacing-xl);
  }

  .why-choose__item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid rgba(201, 168, 108, 0.15);
    opacity: 0;
    animation: fadeInUp 0.5s ease forwards;
  }

  .why-choose__item:last-child {
    border-bottom: none;
  }

  .why-choose__icon {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    border-radius: var(--radius-full);
    transition: all var(--transition-medium);
  }

  .why-choose__item:hover .why-choose__icon {
    transform: scale(1.1);
    box-shadow: var(--shadow-gold);
  }

  .why-choose__icon-check {
    color: var(--color-charcoal);
    font-size: 0.75rem;
    font-weight: 700;
  }

  .why-choose__cta {
    margin-top: var(--spacing-md);
  }

  .why-choose__image {
    position: relative;
  }

  .why-choose__image-frame {
    position: relative;
    padding: 3px;
    border-radius: var(--radius-xl);
    background: var(--gradient-gold-border);
    background-size: 300% 300%;
    animation: borderShimmer 6s ease infinite;
  }

  @keyframes borderShimmer {
    0%, 100% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
  }

  .why-choose__image-placeholder {
    aspect-ratio: 4/5;
    background: linear-gradient(135deg, var(--color-cream-dark) 0%, var(--color-gold-pale) 50%, var(--color-cream-dark) 100%);
    border-radius: calc(var(--radius-xl) - 3px);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-taupe);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Service Areas */
  .service-areas {
    position: relative;
    overflow: hidden;
  }

  .service-areas__particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .service-areas__particle {
    position: absolute;
    bottom: -10px;
    width: 4px;
    height: 4px;
    background: var(--color-gold);
    border-radius: 50%;
    opacity: 0;
    animation: particleRise 12s ease-in-out infinite;
  }

  @keyframes particleRise {
    0%, 100% { opacity: 0; transform: translateY(0); }
    10% { opacity: 0.4; }
    90% { opacity: 0.1; }
    100% { transform: translateY(-100vh); }
  }

  .service-areas__subtitle {
    font-size: 1.15rem;
    color: var(--color-taupe);
    margin-bottom: var(--spacing-xl);
  }

  .service-areas__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm);
    font-family: var(--font-heading);
    font-size: 1.15rem;
    color: var(--color-blush);
  }

  .service-areas__item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .service-areas__dot {
    color: var(--color-gold);
    font-size: 0.6rem;
  }

  /* CTA Section */
  .cta-box {
    position: relative;
    background: linear-gradient(135deg, var(--color-charcoal) 0%, var(--color-charcoal-deep) 100%);
    padding: var(--spacing-3xl);
    border-radius: var(--radius-xl);
    text-align: center;
    color: var(--color-cream);
    overflow: hidden;
  }

  .cta-box__glow {
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle at center, rgba(201, 168, 108, 0.1) 0%, transparent 50%);
    animation: glowRotate 20s linear infinite;
    pointer-events: none;
  }

  @keyframes glowRotate {
    from { transform: rotate(0deg); }
    to { transform: rotate(360deg); }
  }

  .cta-box__content {
    position: relative;
    z-index: 1;
  }

  .cta-box h2 {
    color: var(--color-cream);
    margin-bottom: var(--spacing-md);
  }

  .cta-box p {
    font-size: 1.1rem;
    color: var(--color-taupe);
    max-width: 550px;
    margin: 0 auto var(--spacing-xl);
    line-height: 1.8;
  }

  .cta-box__buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 600px) {
    .cta-box {
      padding: var(--spacing-2xl) var(--spacing-lg);
    }

    .hero-home__cta {
      flex-direction: column;
      width: 100%;
      padding: 0 var(--spacing-md);
    }

    .services-grid {
      grid-template-columns: 1fr;
    }
  }
</style>

<script>
  // Simple scroll reveal animation
  const observerOptions = {
    threshold: 0.1,
    rootMargin: '0px 0px -50px 0px'
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('revealed');
      }
    });
  }, observerOptions);

  document.querySelectorAll('.reveal').forEach(el => {
    observer.observe(el);
  });
</script>
