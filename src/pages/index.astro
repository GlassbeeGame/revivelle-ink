---
import Layout from '../layouts/Layout.astro';
import ShimmerLogo from '../components/ShimmerLogo.astro';
import ServiceCard from '../components/ServiceCard.astro';
import Button from '../components/Button.astro';

const services = [
  {
    title: 'Stretch Mark Camouflage',
    description: 'A pigment-based tattoo that blends stretch marks into your natural skin tone for a smoother, more even appearance. Ideal for white or light stretch marks.',
    href: '/services'
  },
  {
    title: 'Inkless Scar Revision',
    description: 'A pigment-free treatment using custom serums and controlled needling to stimulate collagen and soften stretch mark and scar texture naturally.',
    href: '/services'
  },
  {
    title: 'Scar Camouflage',
    description: 'Improves the appearance of surgical scars, injury scars, and texture irregularities through specialized paramedical tattooing techniques.',
    href: '/services'
  }
];

const benefits = [
  'Certified in paramedical tattooing & PMU',
  'Specializing in stretch mark & scar camouflage',
  'Soft, natural results for all skin tones',
  'High sanitation standards (Washoe County compliant)',
  'Comfortable private suite in Sparks',
  'Warm, judgment-free care rooted in compassion'
];

const serviceAreas = [
  'Sparks',
  'Reno', 
  'Spanish Springs',
  'Sun Valley',
  'South Reno',
  'North Valleys',
  'Washoe County'
];
---

<Layout 
  title="Stretch Mark & Scar Camouflage Tattoo in Sparks, NV | Revivelle Ink"
  description="Transform stretch marks and scars with inkless camouflage tattooing at Revivelle Ink in Sparks, NV. Safe, natural, long-lasting results for all skin tones. Book your consultation today."
>
  <!-- Hero Section - Clean Dark Theme -->
  <section class="hero-home">
    <!-- Clean dark background -->
    <div class="hero-home__background">
      <div class="hero-home__gradient"></div>
    </div>
    
    
    <div class="hero-home__content">
      <ShimmerLogo />
      
      <div class="hero-home__cta">
        <Button href="/contact" variant="gold-glow" size="large">Book Consultation</Button>
        <Button href="/services" variant="outline" size="large">Explore Services</Button>
      </div>
    </div>
  </section>

  <!-- Intro Section -->
  <section class="section intro">
    <div class="container container--narrow">
      <div class="intro__content">
        <span class="intro__eyebrow">Welcome to Revivelle Ink</span>
        <h2 class="intro__heading">
          Natural, Beautiful <span class="text-gradient-gold">Skin Revision</span>
        </h2>
        <p class="intro__text">
          Revivelle Ink is a boutique paramedical and cosmetic tattoo studio located in Sparks, Nevada, specializing in stretch mark camouflage and inkless scar revision services designed to restore confidence and enhance your natural beauty.
        </p>
        <p class="intro__text">
          My approach is rooted in precision, softness, and artistry. Whether you're looking to blend stretch marks, soften scars, or restore your skin's appearance, Revivelle Ink provides a safe, private, and welcoming environment where you can feel truly seen and cared for.
        </p>
        <div class="intro__divider">
          <span class="intro__divider-line"></span>
          <span class="intro__divider-icon"></span>
          <span class="intro__divider-line"></span>
        </div>
      </div>
    </div>
  </section>

  <!-- Services Preview Section -->
  <section class="section section--cream services-preview">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-eyebrow">Our Expertise</span>
        <h2>What I Specialize In</h2>
        <p class="section-subtitle">
          Every service is tailored to your skin type, tone, texture, and personal goals — no one-size-fits-all here.
        </p>
      </div>
      <div class="services-grid">
        {services.map((service, i) => (
          <div class="services-grid__item">
            <ServiceCard 
              title={service.title}
              description={service.description}
              href={service.href}
            />
          </div>
        ))}
      </div>
      <div class="text-center mt-2xl">
        <Button href="/services" variant="dark">View All Services</Button>
      </div>
    </div>
  </section>

  <!-- Why Choose Section -->
  <section class="section why-choose">
    <div class="container">
      <div class="why-choose__grid">
        <div class="why-choose__content">
          <span class="section-eyebrow">The Revivelle Difference</span>
          <h2>Why Choose <span class="text-gradient-gold">Revivelle Ink</span>?</h2>
          <p class="why-choose__intro">
            Your treatment is not just cosmetic — it's emotional, empowering, and transformative.
          </p>
          <ul class="why-choose__list">
            {benefits.map((benefit) => (
              <li class="why-choose__item">
                <span class="why-choose__icon">
                  <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round">
                    <polyline points="20 6 9 17 4 12"></polyline>
                  </svg>
                </span>
                <span>{benefit}</span>
              </li>
            ))}
          </ul>
          <div class="why-choose__cta">
            <Button href="/about" variant="outline">Meet Your Artist</Button>
          </div>
        </div>
        <div class="why-choose__image">
          <div class="why-choose__image-frame">
            <div class="why-choose__image-placeholder">
              <span>Studio Photo</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="section section--dark service-areas">
    <div class="container">
      <div class="service-areas__content text-center">
        <span class="section-eyebrow section-eyebrow--light">Our Reach</span>
        <h2>Serving Sparks, Reno & All of Washoe County</h2>
        <p class="service-areas__subtitle">
          Revivelle Ink proudly provides camouflage tattooing and inkless scar revision to clients throughout Northern Nevada.
        </p>
        <div class="service-areas__list">
          {serviceAreas.map((area, index) => (
            <span class="service-areas__item">
              {area}
              {index < serviceAreas.length - 1 && <span class="service-areas__dot"></span>}
            </span>
          ))}
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-section">
    <div class="container container--narrow">
      <div class="cta-box">
        <div class="cta-box__content">
          <span class="section-eyebrow section-eyebrow--light">Begin Your Journey</span>
          <h2>Ready for Your Transformation?</h2>
          <p>
            You deserve to feel beautiful in your skin. Whether you're ready to revise stretch marks, blend scars, or simply learn more, your journey starts here.
          </p>
          <div class="cta-box__buttons">
            <Button href="/contact" variant="gold-glow" size="large">Book Consultation</Button>
            <Button href="/gallery" variant="outline" size="large">View Results</Button>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero Home Section - Clean Dark Theme */
  .hero-home {
    position: relative;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .hero-home__background {
    position: absolute;
    inset: 0;
    z-index: 0;
  }

  .hero-home__gradient {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      180deg,
      var(--color-charcoal-deep) 0%,
      var(--color-charcoal) 50%,
      #2a2520 100%
    );
  }

  /* Subtle radial gold accent - static */
  .hero-home__gradient::before {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 100%;
    height: 100%;
    transform: translate(-50%, -50%);
    background: radial-gradient(
      ellipse at center,
      rgba(201, 168, 108, 0.05) 0%,
      transparent 50%
    );
  }

  .hero-home__content {
    position: relative;
    z-index: 2;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-xl);
    padding: var(--spacing-xl);
    width: 100%;
    max-width: 1000px;
  }

  .hero-home__cta {
    display: flex;
    gap: var(--spacing-md);
    flex-wrap: wrap;
    justify-content: center;
    opacity: 0;
    animation: fadeInUp 0.8s ease 1.2s forwards;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }


  /* Section Eyebrow */
  .section-eyebrow {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .section-eyebrow--light {
    color: var(--color-blush);
  }

  /* Intro Section */
  .intro__content {
    text-align: center;
  }

  .intro__eyebrow {
    display: inline-block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .intro__heading {
    font-size: clamp(2.25rem, 5vw, 3.5rem);
    margin-bottom: var(--spacing-xl);
  }

  .intro__text {
    font-size: 1.1rem;
    color: var(--color-brown-light);
    line-height: 1.9;
  }

  .intro__divider {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-md);
    margin-top: var(--spacing-2xl);
  }

  .intro__divider-line {
    width: 60px;
    height: 1px;
    background: var(--gradient-gold);
  }

  .intro__divider-icon {
    display: inline-block;
    width: 8px;
    height: 8px;
    background: var(--color-gold);
    border-radius: 50%;
  }

  /* Services Preview */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--spacing-xl);
  }

  @media (max-width: 1100px) {
    .services-grid {
      grid-template-columns: repeat(3, 1fr);
      gap: var(--spacing-lg);
    }
  }

  @media (max-width: 900px) {
    .services-grid {
      grid-template-columns: 1fr;
      max-width: 500px;
      margin: 0 auto;
    }
  }

  /* Why Choose Section */
  .why-choose__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-3xl);
    align-items: center;
  }

  @media (max-width: 1000px) {
    .why-choose__grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
    }
  }

  .why-choose__content h2 {
    margin-bottom: var(--spacing-md);
  }

  .why-choose__intro {
    font-size: 1.15rem;
    color: var(--color-brown-light);
    margin-bottom: var(--spacing-xl);
    line-height: 1.8;
  }

  .why-choose__list {
    list-style: none;
    margin-bottom: var(--spacing-xl);
  }

  .why-choose__item {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid rgba(201, 168, 108, 0.15);
    transition: padding-left var(--transition-fast);
  }

  .why-choose__item:last-child {
    border-bottom: none;
  }

  .why-choose__item:hover {
    padding-left: var(--spacing-sm);
  }

  .why-choose__icon {
    flex-shrink: 0;
    width: 28px;
    height: 28px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    border-radius: var(--radius-full);
    transition: transform var(--transition-medium);
  }

  .why-choose__item:hover .why-choose__icon {
    transform: scale(1.1);
  }

  .why-choose__icon svg {
    color: var(--color-charcoal);
  }

  .why-choose__cta {
    margin-top: var(--spacing-md);
  }

  .why-choose__image {
    position: relative;
  }

  .why-choose__image-frame {
    position: relative;
    padding: 3px;
    border-radius: var(--radius-xl);
    background: var(--gradient-gold);
  }

  .why-choose__image-placeholder {
    aspect-ratio: 4/5;
    background: linear-gradient(135deg, var(--color-cream-dark) 0%, var(--color-gold-pale) 50%, var(--color-cream-dark) 100%);
    border-radius: calc(var(--radius-xl) - 3px);
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-taupe);
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }

  /* Service Areas */
  .service-areas__subtitle {
    font-size: 1.15rem;
    color: var(--color-taupe);
    margin-bottom: var(--spacing-xl);
  }

  .service-areas__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: center;
    gap: var(--spacing-sm);
    font-family: var(--font-heading);
    font-size: 1.15rem;
    color: var(--color-blush);
  }

  .service-areas__item {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
  }

  .service-areas__dot {
    display: inline-block;
    width: 5px;
    height: 5px;
    background: var(--color-gold);
    border-radius: 50%;
    vertical-align: middle;
  }

  /* CTA Section */
  .cta-box {
    position: relative;
    background: linear-gradient(135deg, var(--color-charcoal) 0%, var(--color-charcoal-deep) 100%);
    padding: var(--spacing-3xl);
    border-radius: var(--radius-xl);
    text-align: center;
    color: var(--color-cream);
    overflow: hidden;
    border: 1px solid rgba(201, 168, 108, 0.15);
  }

  .cta-box__content {
    position: relative;
    z-index: 1;
  }

  .cta-box h2 {
    color: var(--color-cream);
    margin-bottom: var(--spacing-md);
  }

  .cta-box p {
    font-size: 1.1rem;
    color: var(--color-taupe);
    max-width: 550px;
    margin: 0 auto var(--spacing-xl);
    line-height: 1.8;
  }

  .cta-box__buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 600px) {
    .cta-box {
      padding: var(--spacing-2xl) var(--spacing-lg);
    }

    .hero-home__cta {
      flex-direction: column;
      width: 100%;
      padding: 0 var(--spacing-md);
    }
  }
</style>
