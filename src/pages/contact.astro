---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout
  title="Contact & Book | Revivelle Ink - Sparks, NV"
  description="Book your stretch mark camouflage or scar revision consultation at Revivelle Ink in Sparks, Nevada. Contact Sammi today to start your transformation."
>
  <section class="contact-page">
    <!-- Background with sparkles -->
    <div class="contact-page__bg">
      <div class="contact-page__particles">
        {Array.from({ length: 30 }).map((_, i) => (
          <div
            class="particle"
            style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 10}s;`}
          />
        ))}
      </div>
    </div>

    <div class="container">
      <div class="contact-grid">
        <!-- Left: Business Info -->
        <div class="business-info">
          <h1 class="business-info__title">
            <span class="title-wrapper">
              <span class="title-text">Book Your Consultation</span>
              <span class="title-highlight" aria-hidden="true">Book Your Consultation</span>
              <span class="title-line"></span>
            </span>
          </h1>
          <p class="business-info__subtitle">
            Call Revivelle Ink at <a href="tel:17076600921" class="business-info__phone">(707) 660-0921</a> or fill out the contact form.
          </p>

          <h2 class="info-heading">Contact Information</h2>

          <div class="info-list">
            <div class="info-item">
              <div class="info-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div class="info-item__content">
                <span class="info-item__value">2165 Green Vista Dr 206B<br/>Sparks, NV 89431</span>
              </div>
            </div>

            <div class="info-item">
              <div class="info-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div class="info-item__content">
                <a href="tel:17076600921" class="info-item__link">(707) 660-0921</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="info-item__content">
                <a href="mailto:Revivelleink@gmail.com" class="info-item__link">Revivelleink@gmail.com</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
              <div class="info-item__content">
                <span class="info-item__value">By Appointment Only</span>
              </div>
            </div>
          </div>

          <p class="business-info__description">
            We're ready to help you feel confident in your skin. Revivelle Ink is a boutique paramedical tattoo studio specializing in stretch mark and scar camouflage. Our licensed and trained team provides transparent pricing with no hidden fees.
          </p>
        </div>

        <!-- Right: Contact Form -->
        <div class="contact-card">
          <div class="contact-card__header">
            <h2 class="contact-card__eyebrow">Get Your Free</h2>
            <h3 class="contact-card__title">Consultation Quote</h3>
          </div>
          <ContactForm />
          <p class="contact-card__note">
            No obligation • 100% free quote • Serving all of Washoe County
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Full Page Section */
  .contact-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: flex-start;
    padding: calc(var(--spacing-3xl) + 140px) 0 var(--spacing-3xl);
    overflow: hidden;
  }

  /* Dark Background */
  .contact-page__bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      #1a1613 0%,
      var(--color-charcoal-deep) 50%,
      var(--color-charcoal) 100%
    );
    z-index: 0;
  }

  .contact-page__bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at center,
      rgba(212, 184, 131, 0.06) 0%,
      transparent 70%
    );
  }

  /* Sparkles */
  .contact-page__particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
    pointer-events: none;
  }

  .particle {
    position: absolute;
    bottom: -10px;
    width: 2px;
    height: 2px;
    background: #ffffff;
    border-radius: 50%;
    animation:
      heroFloat 18s linear infinite,
      heroTwinkle 0.4s ease-in-out infinite;
  }

  .particle:nth-child(odd) {
    width: 3px;
    height: 3px;
    animation:
      heroFloat 18s linear infinite,
      heroTwinkle 0.5s ease-in-out infinite 0.1s;
  }

  .particle:nth-child(3n) {
    width: 2px;
    height: 2px;
    animation:
      heroFloat 18s linear infinite,
      heroTwinkle 0.35s ease-in-out infinite 0.2s;
  }

  .particle:nth-child(4n) {
    width: 1px;
    height: 1px;
    animation:
      heroFloat 18s linear infinite,
      heroTwinkle 0.6s ease-in-out infinite;
  }

  /* Continuous linear upward float - never stops */
  @keyframes heroFloat {
    0% {
      transform: translateY(0);
      opacity: 0;
    }
    2% {
      opacity: 1;
    }
    85% {
      opacity: 1;
    }
    100% {
      transform: translateY(-110vh);
      opacity: 0;
    }
  }

  /* Rapid twinkle effect - independent of movement */
  @keyframes heroTwinkle {
    0%, 100% {
      box-shadow: 0 0 2px #C9A86C;
      background: #d4bc8a;
    }
    50% {
      box-shadow: 0 0 6px #fff, 0 0 12px #fff, 0 0 18px #C9A86C;
      background: #ffffff;
    }
  }

  /* Grid Layout */
  .contact-page > .container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-3xl);
    align-items: start;
  }

  @media (max-width: 1100px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-2xl);
    }

    .contact-page {
      min-height: auto;
      padding: calc(var(--spacing-3xl) + 100px) 0 var(--spacing-2xl);
    }
  }

  @media (max-width: 1000px) {
    .contact-page {
      padding: calc(var(--spacing-2xl) + 120px) 0 var(--spacing-2xl);
    }
  }

  /* Business Info (Left) */
  .business-info__title {
    font-size: clamp(1.75rem, 5vw, 4rem);
    font-weight: 700;
    color: white;
    margin-bottom: var(--spacing-lg);
    line-height: 1.2;
    text-transform: uppercase;
    letter-spacing: -0.02em;
    position: relative;
    display: inline-block;
    word-wrap: break-word;
    overflow-wrap: break-word;
    hyphens: auto;
  }

  .title-wrapper {
    position: relative;
    display: inline-block;
  }

  .title-text {
    position: relative;
    display: inline;
  }

  .title-highlight {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, #C9A86C 0%, #e8d5a8 40%, #C9A86C 80%, #d4bc8a 100%);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    clip-path: inset(0 100% 0 0);
    animation: titleGoldReveal 1.2s ease-out 0.3s forwards;
    pointer-events: none;
  }

  @keyframes titleGoldReveal {
    0% {
      clip-path: inset(0 100% 0 0);
    }
    100% {
      clip-path: inset(0 0 0 0);
    }
  }

  .title-line {
    position: absolute;
    bottom: -0.15em;
    left: 0;
    width: 100%;
    height: 3px;
    background: linear-gradient(90deg, #C9A86C 0%, #e8d5a8 50%, #C9A86C 100%);
    border-radius: 2px;
    transform: scaleX(0);
    transform-origin: left;
    animation: lineReveal 1.8s ease-out 1.5s forwards;
  }

  @keyframes lineReveal {
    0% {
      transform: scaleX(0);
    }
    100% {
      transform: scaleX(1);
    }
  }

  @media (prefers-reduced-motion: reduce) {
    .title-highlight {
      animation: none;
      clip-path: inset(0 0 0 0);
    }

    .title-line {
      animation: none;
      transform: scaleX(1);
    }
  }

  .business-info__subtitle {
    font-size: 1.15rem;
    color: var(--color-cream);
    margin-bottom: var(--spacing-md);
    line-height: 1.6;
  }

  .business-info__phone {
    color: white;
    font-weight: 700;
    text-decoration: none;
  }

  .info-heading {
    font-size: 1.5rem;
    font-weight: 600;
    color: white;
    margin-bottom: var(--spacing-lg);
    margin-top: var(--spacing-md);
  }

  .info-list {
    margin-bottom: var(--spacing-xl);
  }

  .info-item {
    display: flex;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-md);
  }

  .info-item__icon {
    width: 24px;
    height: 24px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--color-gold);
  }

  .info-item__content {
    flex: 1;
  }

  .info-item__value {
    color: var(--color-cream);
    font-size: 1rem;
    line-height: 1.6;
  }

  .info-item__link {
    color: var(--color-cream);
    font-size: 1rem;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .info-item__link:hover {
    color: var(--color-gold);
  }

  .business-info__description {
    font-size: 1rem;
    color: var(--color-taupe);
    line-height: 1.8;
    max-width: 540px;
  }

  /* Contact Card (Right) - White */
  .contact-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--spacing-lg) var(--spacing-lg);
    box-shadow:
      0 30px 80px rgba(0, 0, 0, 0.5),
      0 15px 40px rgba(0, 0, 0, 0.3);
  }

  .contact-card__header {
    text-align: center;
    margin-bottom: var(--spacing-sm);
  }

  .contact-card__eyebrow {
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin: 0 0 0.25rem 0;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .contact-card__title {
    font-size: 1.85rem;
    font-weight: 700;
    color: var(--color-gold-deep);
    margin: 0;
    text-transform: uppercase;
    letter-spacing: -0.01em;
    line-height: 1.1;
  }

  .contact-card__note {
    font-size: 0.9rem;
    color: var(--color-taupe);
    text-align: center;
    margin-top: var(--spacing-sm);
    margin-bottom: 0;
    line-height: 1.6;
  }

  @media (max-width: 768px) {
    .contact-grid {
      gap: var(--spacing-xl);
    }

    .contact-page {
      padding: calc(var(--spacing-xl) + 140px) 0 var(--spacing-xl);
    }

    .contact-card {
      padding: var(--spacing-lg) var(--spacing-md);
    }
  }

  @media (max-width: 600px) {
    .business-info__title {
      font-size: clamp(1.5rem, 4vw, 2rem);
      margin-bottom: var(--spacing-md);
    }

    .business-info__subtitle {
      font-size: 1rem;
    }

    .info-heading {
      font-size: 1.25rem;
      margin-top: var(--spacing-lg);
    }

    .business-info__description {
      font-size: 0.95rem;
    }

    .contact-card {
      padding: var(--spacing-md);
    }

    .contact-card__eyebrow {
      font-size: 1rem;
    }

    .contact-card__title {
      font-size: 1.5rem;
    }

    .contact-grid {
      gap: var(--spacing-lg);
    }

    .contact-page {
      padding: calc(var(--spacing-xl) + 110px) 0 var(--spacing-lg);
    }
  }

  @media (max-width: 480px) {
    .business-info__title {
      font-size: clamp(1.35rem, 3.5vw, 1.75rem);
    }

    .contact-page {
      padding: calc(var(--spacing-lg) + 110px) 0 var(--spacing-md);
    }
  }
</style>
