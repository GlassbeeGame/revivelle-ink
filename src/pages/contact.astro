---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import ContactForm from '../components/ContactForm.astro';
import Button from '../components/Button.astro';

const policies = [
  {
    title: 'Booking & Deposits',
    items: [
      'A non-refundable deposit is required to book any appointment',
      'The deposit is applied to your total service cost',
      'Appointments without a deposit are not confirmed'
    ]
  },
  {
    title: 'Rescheduling & Cancellations',
    items: [
      'Reschedule at least 48 hours in advance without losing your deposit',
      'Less than 48 hours notice will forfeit the deposit',
      'No-shows will be charged 50‚Äì100% of the service fee'
    ]
  },
  {
    title: 'Health & Eligibility',
    items: [
      'Cannot service if pregnant or breastfeeding',
      'Not eligible if on Accutane or strong retinoids',
      'No active eczema, infection, or irritation in the area',
      'Not suitable for keloid-prone skin',
      'A health history form must be completed before all services'
    ]
  }
];
---

<Layout 
  title="Contact & Book | Revivelle Ink - Sparks, NV"
  description="Book your stretch mark camouflage or scar revision consultation at Revivelle Ink in Sparks, Nevada. Contact Sammi today to start your transformation."
>
  <Hero 
    title="Let's Connect"
    subtitle="Ready to start your confidence journey? I'm here to help."
    dark={true}
    size="medium"
  />

  <!-- Contact Section -->
  <section class="section contact-section">
    <div class="container">
      <div class="contact-grid">
        <!-- Contact Form -->
        <div class="contact-form-container">
          <h2>Send a Message</h2>
          <p class="form-intro">
            Have questions about a treatment? Want to know if you're a good candidate? 
            Fill out the form below and I'll get back to you within 24-48 hours.
          </p>
          <ContactForm />
        </div>

        <!-- Contact Info -->
        <div class="contact-info">
          <div class="contact-info__card">
            <h3>Get in Touch</h3>
            
            <div class="contact-method">
              <span class="contact-method__icon">üìç</span>
              <div class="contact-method__content">
                <span class="contact-method__label">Location</span>
                <span class="contact-method__value">Sparks, Nevada</span>
                <span class="contact-method__note">Serving Sparks, Reno & Washoe County</span>
              </div>
            </div>

            <div class="contact-method">
              <span class="contact-method__icon">üì±</span>
              <div class="contact-method__content">
                <span class="contact-method__label">Phone</span>
                <span class="contact-method__value">Contact for number</span>
              </div>
            </div>

            <div class="contact-method">
              <span class="contact-method__icon">üìß</span>
              <div class="contact-method__content">
                <span class="contact-method__label">Email</span>
                <span class="contact-method__value">Contact for email</span>
              </div>
            </div>

            <div class="contact-method">
              <span class="contact-method__icon">üì∏</span>
              <div class="contact-method__content">
                <span class="contact-method__label">Instagram</span>
                <a href="https://instagram.com/revivelle.ink" target="_blank" rel="noopener noreferrer" class="contact-method__link">
                  @revivelle.ink
                </a>
              </div>
            </div>
          </div>

          <div class="contact-info__hours">
            <h3>Hours</h3>
            <p class="hours-note">By appointment only</p>
            <p class="hours-detail">
              I offer flexible scheduling to accommodate your needs. 
              Availability will be provided when you reach out to book.
            </p>
          </div>

          <div class="contact-info__photo">
            <h3>Free Photo Assessment</h3>
            <p>
              Not sure if you're a good candidate? Send photos of your stretch marks or scars 
              via email or Instagram DM for a free virtual assessment.
            </p>
            <a href="https://instagram.com/revivelle.ink" target="_blank" rel="noopener noreferrer" class="photo-cta">
              Send Photos on Instagram ‚Üí
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Policies Section -->
  <section class="section section--cream policies-section">
    <div class="container">
      <div class="section-header text-center">
        <h2>Studio Policies</h2>
        <p class="section-subtitle">
          These policies ensure a safe, professional, and comfortable experience for every client.
        </p>
      </div>

      <div class="policies-grid">
        {policies.map((policy) => (
          <div class="policy-card">
            <h3>{policy.title}</h3>
            <ul>
              {policy.items.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
          </div>
        ))}
      </div>

      <div class="policies-footer text-center">
        <p>
          <strong>Refund Policy:</strong> Because these services require time, material, and labor, 
          all services and deposits are non-refundable.
        </p>
      </div>
    </div>
  </section>

  <!-- Final CTA -->
  <section class="section section--dark final-cta">
    <div class="container container--narrow text-center">
      <h2>Your Transformation Awaits</h2>
      <p class="cta-text">
        You deserve to feel beautiful in your skin. Whether you're ready to book or just have questions, 
        I'm here to support you every step of the way.
      </p>
      <p class="cta-tagline">
        Revivelle Ink ‚Äî Precision ‚Ä¢ Restoration ‚Ä¢ Confidence
      </p>
    </div>
  </section>
</Layout>

<style>
  /* Contact Grid */
  .contact-grid {
    display: grid;
    grid-template-columns: 1.2fr 1fr;
    gap: var(--spacing-3xl);
    align-items: start;
  }

  @media (max-width: 900px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }
  }

  /* Contact Form Container */
  .contact-form-container h2 {
    margin-bottom: var(--spacing-sm);
  }

  .form-intro {
    font-size: 1rem;
    color: var(--color-brown-light);
    margin-bottom: var(--spacing-lg);
  }

  /* Contact Info */
  .contact-info {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-lg);
  }

  .contact-info__card,
  .contact-info__hours,
  .contact-info__photo {
    background: var(--color-cream-dark);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
  }

  .contact-info h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-md);
  }

  .contact-method {
    display: flex;
    gap: var(--spacing-sm);
    padding: var(--spacing-sm) 0;
    border-bottom: 1px solid rgba(139, 129, 120, 0.15);
  }

  .contact-method:last-child {
    border-bottom: none;
  }

  .contact-method__icon {
    font-size: 1.25rem;
    flex-shrink: 0;
  }

  .contact-method__content {
    display: flex;
    flex-direction: column;
  }

  .contact-method__label {
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-taupe);
  }

  .contact-method__value {
    font-size: 1rem;
    color: var(--color-charcoal);
  }

  .contact-method__note {
    font-size: 0.85rem;
    color: var(--color-taupe);
  }

  .contact-method__link {
    font-size: 1rem;
    color: var(--color-gold);
    font-weight: 500;
  }

  .contact-method__link:hover {
    color: var(--color-blush);
  }

  .hours-note {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-style: italic;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .hours-detail {
    font-size: 0.9rem;
    color: var(--color-brown-light);
    margin: 0;
  }

  .contact-info__photo p {
    font-size: 0.95rem;
    color: var(--color-brown-light);
    margin-bottom: var(--spacing-md);
  }

  .photo-cta {
    display: inline-block;
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--color-gold);
    transition: color var(--transition-fast);
  }

  .photo-cta:hover {
    color: var(--color-blush);
  }

  /* Policies Section */
  .policies-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  .policy-card {
    background: var(--color-cream);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(139, 129, 120, 0.15);
  }

  .policy-card h3 {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-md);
    padding-bottom: var(--spacing-sm);
    border-bottom: 2px solid var(--color-gold);
  }

  .policy-card ul {
    list-style: none;
    margin: 0;
  }

  .policy-card li {
    font-size: 0.9rem;
    color: var(--color-brown-light);
    padding: var(--spacing-xs) 0;
    padding-left: 1.25rem;
    position: relative;
  }

  .policy-card li::before {
    content: '‚Ä¢';
    position: absolute;
    left: 0;
    color: var(--color-gold);
  }

  .policies-footer {
    max-width: 600px;
    margin: 0 auto;
    padding: var(--spacing-lg);
    background: rgba(201, 168, 108, 0.1);
    border-radius: var(--radius-md);
  }

  .policies-footer p {
    font-size: 0.9rem;
    color: var(--color-brown);
    margin: 0;
  }

  /* Final CTA */
  .cta-text {
    font-size: 1.1rem;
    color: var(--color-taupe);
    margin-bottom: var(--spacing-lg);
  }

  .cta-tagline {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    font-style: italic;
    color: var(--color-blush);
    margin: 0;
  }

  .section-header {
    margin-bottom: var(--spacing-2xl);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--color-taupe);
    margin-top: var(--spacing-sm);
  }
</style>
