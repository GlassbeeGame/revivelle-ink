---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout
  title="Contact & Book | Revivelle Ink - Sparks, NV"
  description="Book your stretch mark camouflage or scar revision consultation at Revivelle Ink in Sparks, Nevada. Contact Sammi today to start your transformation."
>
  <section class="contact-page">
    <!-- Background with sparkles -->
    <div class="contact-page__bg">
      <div class="contact-page__particles">
        {Array.from({ length: 30 }).map((_, i) => (
          <div
            class="particle"
            style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 10}s;`}
          />
        ))}
      </div>
    </div>

    <div class="container">
      <div class="contact-grid">
        <!-- Left: Business Info -->
        <div class="business-info">
          <h1 class="business-info__title">Get in Touch</h1>
          <p class="business-info__subtitle">
            Call Revivelle Ink at <a href="tel:17076600921" class="business-info__phone">(707) 660-0921</a> or fill out the contact form.
          </p>

          <div class="info-section">
            <h2 class="info-section__title">Contact Information</h2>

            <div class="info-item">
              <div class="info-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div class="info-item__content">
                <span class="info-item__value">2165 Green Vista Dr 206B<br/>Sparks, NV 89431</span>
              </div>
            </div>

            <div class="info-item">
              <div class="info-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div class="info-item__content">
                <a href="tel:17076600921" class="info-item__value info-item__link">(707) 660-0921</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div class="info-item__content">
                <a href="mailto:Revivelleink@gmail.com" class="info-item__value info-item__link">Revivelleink@gmail.com</a>
              </div>
            </div>

            <div class="info-item">
              <div class="info-item__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
              <div class="info-item__content">
                <span class="info-item__value">By Appointment Only</span>
              </div>
            </div>
          </div>
        </div>

        <!-- Right: Contact Form -->
        <div class="contact-card">
          <h2 class="contact-card__title">Send Us a Message</h2>
          <ContactForm />
          <p class="contact-card__note">
            We'll respond within 24-48 hours • Free consultation • Serving all of Washoe County
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Full Page Section */
  .contact-page {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: calc(var(--spacing-4xl) + 100px) 0 var(--spacing-4xl);
    overflow: hidden;
  }

  /* Dark Background */
  .contact-page__bg {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      #1a1613 0%,
      var(--color-charcoal-deep) 50%,
      var(--color-charcoal) 100%
    );
    z-index: 0;
  }

  .contact-page__bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at center,
      rgba(212, 184, 131, 0.06) 0%,
      transparent 70%
    );
  }

  /* Sparkles */
  .contact-page__particles {
    position: absolute;
    inset: 0;
    overflow: hidden;
  }

  .particle {
    position: absolute;
    bottom: -10px;
    width: 3px;
    height: 3px;
    background: var(--color-gold);
    border-radius: 50%;
    opacity: 0;
    animation: rise 15s ease-in-out infinite;
  }

  @keyframes rise {
    0%, 100% {
      opacity: 0;
      transform: translateY(0);
    }
    10% { opacity: 0.5; }
    90% { opacity: 0.1; }
    100% {
      transform: translateY(-100vh);
    }
  }

  /* Grid Layout */
  .contact-page > .container {
    position: relative;
    z-index: 1;
    max-width: 1400px;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 0.85fr 1.15fr;
    gap: var(--spacing-3xl);
    align-items: start;
  }

  @media (max-width: 1100px) {
    .contact-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-3xl);
    }

    .contact-page {
      min-height: auto;
      padding: calc(var(--spacing-3xl) + 100px) 0 var(--spacing-3xl);
    }
  }

  /* Business Info (Left) */
  .business-info__title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 500;
    color: var(--color-cream);
    margin-bottom: var(--spacing-lg);
    line-height: 1.2;
  }

  .business-info__subtitle {
    font-size: 1.25rem;
    color: var(--color-taupe);
    margin-bottom: var(--spacing-3xl);
    line-height: 1.7;
  }

  .business-info__phone {
    color: var(--color-gold);
    font-weight: 600;
    text-decoration: none;
    border-bottom: 2px solid var(--color-gold);
  }

  .info-section {
    background: rgba(255, 255, 255, 0.03);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(201, 168, 108, 0.2);
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
  }

  .info-section__title {
    font-size: 1.35rem;
    font-weight: 500;
    color: var(--color-cream);
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid rgba(201, 168, 108, 0.2);
  }

  .info-item {
    display: flex;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid rgba(201, 168, 108, 0.1);
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-item__icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    border-radius: var(--radius-md);
    color: var(--color-charcoal);
  }

  .info-item__value {
    color: var(--color-cream);
    font-size: 1rem;
    line-height: 1.6;
  }

  .info-item__link {
    color: var(--color-blush);
    font-weight: 600;
    text-decoration: none;
  }

  /* Contact Card (Right) - White */
  .contact-card {
    background: white;
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    box-shadow:
      0 30px 80px rgba(0, 0, 0, 0.5),
      0 15px 40px rgba(0, 0, 0, 0.3);
  }

  .contact-card__title {
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  .contact-card__note {
    font-size: 0.85rem;
    color: var(--color-taupe);
    text-align: center;
    margin-top: var(--spacing-lg);
    line-height: 1.6;
  }

  @media (max-width: 600px) {
    .business-info__title {
      font-size: 2rem;
    }

    .business-info__subtitle {
      font-size: 1.1rem;
    }

    .info-section,
    .contact-card {
      padding: var(--spacing-xl);
    }
  }
</style>
