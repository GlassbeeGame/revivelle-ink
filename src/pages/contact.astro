---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<Layout
  title="Contact & Book | Revivelle Ink - Sparks, NV"
  description="Book your stretch mark camouflage or scar revision consultation at Revivelle Ink in Sparks, Nevada. Contact Sammi today to start your transformation."
>
  <!-- Contact Hero Section -->
  <section class="contact-hero">
    <div class="contact-hero__background"></div>
    <div class="contact-hero__particles">
      {Array.from({ length: 20 }).map((_, i) => (
        <div
          class="hero-particle"
          style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 10}s;`}
        />
      ))}
    </div>
    <div class="container">
      <div class="contact-hero__grid">
        <!-- Left Side: Heading & Business Info -->
        <div class="contact-hero__content">
          <h1 class="contact-hero__title">Ready to Begin Your Transformation?</h1>
          <p class="contact-hero__subtitle">
            Call Revivelle Ink at <a href="tel:17076600921" class="contact-hero__phone">(707) 660-0921</a> or fill out the contact form.
          </p>

          <!-- Business Information Card -->
          <div class="business-info">
            <h2 class="business-info__title">Contact Information</h2>

            <div class="business-info__item">
              <div class="business-info__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <div>
                <span class="business-info__value">2165 Green Vista Dr 206B<br/>Sparks, NV 89431</span>
              </div>
            </div>

            <div class="business-info__item">
              <div class="business-info__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
                </svg>
              </div>
              <div>
                <a href="tel:17076600921" class="business-info__value business-info__link">(707) 660-0921</a>
              </div>
            </div>

            <div class="business-info__item">
              <div class="business-info__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
                  <polyline points="22,6 12,13 2,6"></polyline>
                </svg>
              </div>
              <div>
                <a href="mailto:Revivelleink@gmail.com" class="business-info__value business-info__link">Revivelleink@gmail.com</a>
              </div>
            </div>

            <div class="business-info__item">
              <div class="business-info__icon">
                <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
              </div>
              <div>
                <span class="business-info__value">By Appointment Only<br/><span class="business-info__note">Flexible scheduling available</span></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Side: Contact Form Card -->
        <div class="contact-form-card">
          <h2 class="form-card__title">Get Your Free Consultation</h2>
          <ContactForm />
          <p class="form-card__note">
            <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline; vertical-align: middle; margin-right: 6px;">
              <polyline points="20 6 9 17 4 12"></polyline>
            </svg>
            Response within 24-48 hours • 100% free consultation • Serving all of Washoe County
          </p>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Contact Hero Section */
  .contact-hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    padding: calc(var(--spacing-4xl) + 80px) 0 var(--spacing-4xl);
    overflow: hidden;
  }

  .contact-hero__background {
    position: absolute;
    inset: 0;
    background: linear-gradient(
      135deg,
      var(--color-charcoal-deep) 0%,
      var(--color-charcoal) 50%,
      #2a2520 100%
    );
    z-index: 0;
  }

  .contact-hero__background::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(
      ellipse at top left,
      rgba(212, 184, 131, 0.12) 0%,
      transparent 50%
    ),
    radial-gradient(
      ellipse at bottom right,
      rgba(212, 184, 131, 0.08) 0%,
      transparent 50%
    );
  }

  .contact-hero__particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
    z-index: 1;
  }

  .hero-particle {
    position: absolute;
    bottom: -10px;
    width: 3px;
    height: 3px;
    background: var(--color-gold);
    border-radius: 50%;
    opacity: 0;
    animation: particleRise 15s ease-in-out infinite;
  }

  @keyframes particleRise {
    0%, 100% { opacity: 0; transform: translateY(0); }
    10% { opacity: 0.4; }
    90% { opacity: 0.1; }
    100% { transform: translateY(-100vh); }
  }

  .contact-hero > .container {
    position: relative;
    z-index: 2;
  }

  .contact-hero__grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-4xl);
    align-items: start;
  }

  @media (max-width: 1100px) {
    .contact-hero__grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-3xl);
    }

    .contact-hero {
      min-height: auto;
      padding: calc(var(--spacing-3xl) + 80px) 0 var(--spacing-3xl);
    }
  }

  /* Left Side Content */
  .contact-hero__title {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 500;
    color: var(--color-cream);
    margin-bottom: var(--spacing-lg);
    line-height: 1.2;
  }

  .contact-hero__subtitle {
    font-size: 1.25rem;
    color: var(--color-taupe);
    margin-bottom: var(--spacing-3xl);
    line-height: 1.7;
  }

  .contact-hero__phone {
    color: var(--color-gold);
    font-weight: 600;
    text-decoration: none;
    transition: color var(--transition-fast);
    border-bottom: 2px solid var(--color-gold);
  }

  .contact-hero__phone:hover {
    color: var(--color-blush);
    border-color: var(--color-blush);
  }

  /* Business Info Card */
  .business-info {
    background: rgba(255, 255, 255, 0.05);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(201, 168, 108, 0.2);
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.3);
  }

  .business-info__title {
    font-family: var(--font-heading);
    font-size: 1.35rem;
    font-weight: 500;
    color: var(--color-cream);
    margin-bottom: var(--spacing-xl);
    padding-bottom: var(--spacing-md);
    border-bottom: 1px solid rgba(201, 168, 108, 0.2);
  }

  .business-info__item {
    display: flex;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid rgba(201, 168, 108, 0.1);
  }

  .business-info__item:last-child {
    border-bottom: none;
  }

  .business-info__icon {
    width: 40px;
    height: 40px;
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    border-radius: var(--radius-md);
    color: var(--color-charcoal);
  }

  .business-info__value {
    color: var(--color-cream);
    font-size: 1rem;
    line-height: 1.6;
  }

  .business-info__note {
    font-size: 0.85rem;
    color: var(--color-taupe);
  }

  .business-info__link {
    color: var(--color-blush);
    font-weight: 600;
    transition: color var(--transition-fast);
  }

  .business-info__link:hover {
    color: var(--color-gold);
  }

  /* Contact Form Card */
  .contact-form-card {
    background: var(--color-cream);
    border-radius: var(--radius-xl);
    padding: var(--spacing-2xl);
    box-shadow:
      0 20px 60px rgba(0, 0, 0, 0.4),
      0 10px 30px rgba(0, 0, 0, 0.2);
    border: 1px solid rgba(201, 168, 108, 0.3);
  }

  .form-card__title {
    font-family: var(--font-heading);
    font-size: 1.75rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-xl);
    text-align: center;
  }

  .form-card__note {
    font-size: 0.85rem;
    color: var(--color-taupe);
    text-align: center;
    margin-top: var(--spacing-lg);
    line-height: 1.6;
  }

  @media (max-width: 600px) {
    .contact-hero__title {
      font-size: 2rem;
    }

    .contact-hero__subtitle {
      font-size: 1.1rem;
    }

    .business-info,
    .contact-form-card {
      padding: var(--spacing-xl);
    }
  }
</style>
