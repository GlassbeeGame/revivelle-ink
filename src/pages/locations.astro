---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Button from '../components/Button.astro';
import LocationCard from '../components/LocationCard.astro';
import { locations } from '../data/locations.js';

const expectations = [
  {
    number: '01',
    title: 'Arrival',
    description: "You'll receive the full studio address via email/text when you book. Free parking is available, and the studio is easily accessible."
  },
  {
    number: '02',
    title: 'Private Environment',
    description: "The studio is a private suite designed for your comfort. You'll have my full attention throughout your appointment."
  },
  {
    number: '03',
    title: 'Relaxed Atmosphere',
    description: 'Expect a peaceful, feminine space where you can relax and feel cared for. Many clients describe it as grounding and confidence-restoring.'
  },
  {
    number: '04',
    title: 'Professional Care',
    description: 'The studio meets all Washoe County health requirements. Sterile, single-use equipment ensures your safety.'
  }
];
---

<Layout 
  title="Location - Sparks, NV | Revivelle Ink"
  description="Visit Revivelle Ink in Sparks, Nevada. Serving clients from Sparks, Reno, Spanish Springs, and all of Washoe County for stretch mark and scar camouflage."
>
  <Hero
    title="Visit Revivelle Ink"
    subtitle="Conveniently located in Sparks, Nevada — serving the greater Reno area"
    dark={true}
    size="medium"
  />

  <!-- Studio Location Section (Featured at Top) -->
  <section class="section studio-featured-section">
    <div class="container container--narrow">
      <a href="/locations/sparks" class="studio-location-card">
        <div class="studio-location-card__icon">
          <svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
        </div>
        <div class="studio-location-card__content">
          <h3>Sparks, Nevada</h3>
          <p class="studio-address">
            2165 Green Vista Dr, Suite 206B<br/>
            Sparks, NV 89431
          </p>
          <div class="studio-meta">
            <span>Private Suite</span>
            <span class="studio-meta-separator">•</span>
            <span>Free Parking</span>
            <span class="studio-meta-separator">•</span>
            <span>By Appointment</span>
          </div>
          <div class="studio-cta-buttons">
            <Button href="/locations/sparks" variant="gold-glow">Learn More</Button>
            <Button href="tel:17076600921" variant="outline">Call (707) 660-0921</Button>
          </div>
        </div>
      </a>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="section section--gold-tint service-areas-section" style="padding-top: var(--spacing-xl);">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-eyebrow">Explore Service Areas</span>
        <h2>Serving Communities Across Northern Nevada</h2>
        <p class="section-subtitle">
          Click a location to learn more about how we serve your community and what to expect when you visit from your area.
        </p>
      </div>

      <div class="location-cards-grid">
        {locations.filter(loc => loc.slug !== 'sparks').map((location, i) => (
          <div class="location-cards-grid__item" style={`animation-delay: ${i * 0.08}s`}>
            <LocationCard
              name={location.name}
              fullName={location.fullName}
              tagline={location.tagline}
              driveTime={location.driveTime}
              distance={location.distance}
              slug={location.slug}
              featured={location.featured}
            />
          </div>
        ))}
      </div>

      <div class="areas-note text-center">
        <p>
          Don't see your area listed? If you're within reasonable driving distance, I'd still love to help you.
          <a href="/contact">Reach out</a> and let's chat!
        </p>
      </div>
    </div>
  </section>

  <!-- What to Expect Section -->
  <section class="section expect-section">
    <div class="container container--narrow">
      <div class="section-header text-center">
        <span class="section-eyebrow">Your Experience</span>
        <h2>What to Expect When You Visit</h2>
      </div>
      
      <div class="expect-list">
        {expectations.map((item, i) => (
          <div class="expect-item" style={`animation-delay: ${i * 0.1}s`}>
            <div class="expect-number">{item.number}</div>
            <div class="expect-content">
              <h3>{item.title}</h3>
              <p>{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section--dark cta-location">
    <div class="cta-location__particles">
      {Array.from({ length: 10 }).map((_, i) => (
        <div 
          class="cta-particle" 
          style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 6}s;`}
        />
      ))}
    </div>
    <div class="container text-center">
      <span class="section-eyebrow section-eyebrow--light">Start Your Journey</span>
      <h2>Ready to Visit?</h2>
      <p class="cta-text">
        Book your consultation today and take the first step toward feeling confident in your skin.
      </p>
      <div class="cta-buttons">
        <Button href="tel:17076600921" variant="gold-glow" size="large">Free Consult</Button>
        <Button href="/services" variant="outline" size="large">View Services</Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .section-eyebrow {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .section-eyebrow--light {
    color: var(--color-blush);
  }

  /* Studio Featured Section */
  .studio-featured-section {
    background: linear-gradient(180deg, var(--color-cream) 0%, var(--color-cream-dark) 100%);
    padding-bottom: var(--spacing-lg);
  }

  .studio-location-card {
    display: flex;
    gap: var(--spacing-lg);
    max-width: 700px;
    margin: 0 auto;
    background: var(--color-cream);
    border: 1px solid rgba(201, 168, 108, 0.2);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    text-decoration: none;
    color: inherit;
    cursor: pointer;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .studio-location-card:hover {
    border-color: var(--color-gold);
    box-shadow:
      0 8px 24px rgba(201, 168, 108, 0.2),
      0 0 40px rgba(201, 168, 108, 0.15);
    transform: translateY(-4px);
  }

  .studio-location-card__icon {
    flex-shrink: 0;
    width: 60px;
    height: 60px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    border-radius: var(--radius-lg);
    box-shadow: 0 2px 8px rgba(201, 168, 108, 0.2);
  }

  .studio-location-card__icon svg {
    color: var(--color-charcoal);
  }

  .studio-location-card__content {
    flex: 1;
  }

  .studio-location-card__content h3 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-xs);
  }

  .studio-address {
    font-size: 1rem;
    color: var(--color-brown-light);
    line-height: 1.6;
    margin-bottom: var(--spacing-sm);
  }

  .studio-meta {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
    font-size: 0.875rem;
    color: var(--color-taupe);
    margin-bottom: var(--spacing-md);
  }

  .studio-meta-separator {
    color: var(--color-gold);
  }

  .studio-cta-buttons {
    display: flex;
    gap: var(--spacing-sm);
    flex-wrap: wrap;
  }

  @media (max-width: 768px) {
    .studio-location-card {
      padding: var(--spacing-md);
    }

    .expect-item {
      padding: var(--spacing-md);
    }

    .section-header {
      margin-bottom: var(--spacing-lg);
    }
  }

  @media (max-width: 600px) {
    .studio-location-card {
      flex-direction: column;
      text-align: center;
      padding: var(--spacing-md);
    }

    .studio-location-card__icon {
      margin: 0 auto;
    }

    .studio-cta-buttons {
      flex-direction: column;
    }

    .expect-item {
      flex-direction: column;
      align-items: center;
      text-align: center;
      padding: var(--spacing-md);
      gap: var(--spacing-md);
    }

    .cta-buttons {
      flex-direction: column;
    }
  }

  @media (max-width: 480px) {
    .expect-item {
      padding: var(--spacing-sm) var(--spacing-md);
    }
  }

  /* Location Cards Grid - 2 columns on desktop */
  .location-cards-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-xl);
  }

  @media (max-width: 700px) {
    .location-cards-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-md);
    }
  }

  .location-cards-grid__item {
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .areas-note {
    max-width: 550px;
    margin: 0 auto;
  }

  .areas-note p {
    font-size: 1rem;
    color: var(--color-brown-light);
  }

  .areas-note a {
    color: var(--color-gold);
    font-weight: 600;
  }

  /* What to Expect */
  .expect-list {
    margin-top: var(--spacing-xl);
  }

  .expect-item {
    display: flex;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg);
    margin-bottom: var(--spacing-md);
    background: linear-gradient(180deg, var(--color-cream) 0%, #faf8f5 100%);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(201, 168, 108, 0.1);
    opacity: 0;
    animation: fadeInUp 0.5s ease forwards;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .expect-item:last-child {
    margin-bottom: 0;
  }

  .expect-item:hover {
    transform: translateX(8px);
    border-color: rgba(201, 168, 108, 0.25);
    box-shadow: 0 10px 30px rgba(201, 168, 108, 0.1);
  }

  .expect-number {
    flex-shrink: 0;
    width: 54px;
    height: 54px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--color-charcoal);
    background: var(--gradient-gold);
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 15px rgba(201, 168, 108, 0.3);
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .expect-item:hover .expect-number {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 6px 20px rgba(201, 168, 108, 0.4);
  }

  .expect-content h3 {
    font-family: var(--font-heading);
    font-size: 1.35rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-xs);
  }

  .expect-content p {
    font-size: 1rem;
    color: var(--color-brown-light);
    line-height: 1.8;
    margin: 0;
  }

  /* CTA */
  .cta-location {
    position: relative;
    overflow: hidden;
  }

  .cta-location__particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .cta-particle {
    position: absolute;
    bottom: -10px;
    width: 4px;
    height: 4px;
    background: var(--color-gold);
    border-radius: 50%;
    opacity: 0;
    animation: particleRise 10s ease-in-out infinite;
  }

  @keyframes particleRise {
    0%, 100% { opacity: 0; transform: translateY(0); }
    10% { opacity: 0.5; }
    90% { opacity: 0.1; }
    100% { transform: translateY(-100vh); }
  }

  .cta-text {
    font-size: 1.1rem;
    color: var(--color-taupe);
    max-width: 550px;
    margin: 0 auto var(--spacing-xl);
    line-height: 1.8;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .section-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: var(--spacing-xl);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--color-taupe);
    margin-top: var(--spacing-sm);
  }
</style>
