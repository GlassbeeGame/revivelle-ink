---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Button from '../components/Button.astro';

const serviceAreas = [
  { name: 'Sparks', highlight: true },
  { name: 'Reno', highlight: true },
  { name: 'Spanish Springs', highlight: false },
  { name: 'Sun Valley', highlight: false },
  { name: 'South Reno', highlight: false },
  { name: 'North Valleys', highlight: false },
  { name: 'Fernley', highlight: false },
  { name: 'Washoe County', highlight: true },
];
---

<Layout 
  title="Location - Sparks, NV | Revivelle Ink"
  description="Visit Revivelle Ink in Sparks, Nevada. Serving clients from Sparks, Reno, Spanish Springs, and all of Washoe County for stretch mark and scar camouflage."
>
  <Hero 
    title="Visit Revivelle Ink"
    subtitle="Conveniently located in Sparks, Nevada ‚Äî serving the greater Reno area"
    dark={true}
    size="medium"
  />

  <!-- Location Section -->
  <section class="section location-section">
    <div class="container">
      <div class="location-grid">
        <!-- Location Card -->
        <div class="location-card">
          <div class="location-card__header">
            <span class="location-card__icon">üìç</span>
            <h2>Sparks, Nevada</h2>
          </div>
          
          <div class="location-card__details">
            <div class="location-detail">
              <span class="location-detail__label">Address</span>
              <span class="location-detail__value">
                Sparks, NV 89431<br/>
                <em>(Full address provided upon booking)</em>
              </span>
            </div>
            
            <div class="location-detail">
              <span class="location-detail__label">Studio Type</span>
              <span class="location-detail__value">Private Suite</span>
            </div>
            
            <div class="location-detail">
              <span class="location-detail__label">Parking</span>
              <span class="location-detail__value">Free parking available</span>
            </div>
          </div>

          <div class="location-card__note">
            <p>
              <strong>Private Studio:</strong> For your comfort and privacy, the full studio address will be provided when you book your appointment.
            </p>
          </div>

          <Button href="/contact" variant="primary" fullWidth>Book Your Visit</Button>
        </div>

        <!-- Map Placeholder -->
        <div class="map-container">
          <div class="map-placeholder">
            <div class="map-placeholder__content">
              <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1" stroke-linecap="round" stroke-linejoin="round">
                <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                <circle cx="12" cy="10" r="3"></circle>
              </svg>
              <span>Sparks, Nevada</span>
              <p>Located in the heart of Sparks, easily accessible from Reno and surrounding areas.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="section section--cream service-areas-section">
    <div class="container">
      <div class="section-header text-center">
        <h2>Serving Northern Nevada</h2>
        <p class="section-subtitle">
          Revivelle Ink proudly provides camouflage tattooing and inkless scar revision to clients throughout the region.
        </p>
      </div>

      <div class="areas-grid">
        {serviceAreas.map((area) => (
          <div class={`area-card ${area.highlight ? 'area-card--highlight' : ''}`}>
            <span class="area-card__name">{area.name}</span>
            {area.highlight && <span class="area-card__badge">Primary</span>}
          </div>
        ))}
      </div>

      <div class="areas-note text-center">
        <p>
          Don't see your area listed? If you're within reasonable driving distance, I'd still love to help you. 
          <a href="/contact">Reach out</a> and let's chat!
        </p>
      </div>
    </div>
  </section>

  <!-- What to Expect Section -->
  <section class="section expect-section">
    <div class="container container--narrow">
      <h2 class="text-center">What to Expect When You Visit</h2>
      
      <div class="expect-list">
        <div class="expect-item">
          <span class="expect-number">01</span>
          <div class="expect-content">
            <h3>Arrival</h3>
            <p>
              You'll receive the full studio address via email/text when you book. Free parking is available, 
              and the studio is easily accessible.
            </p>
          </div>
        </div>

        <div class="expect-item">
          <span class="expect-number">02</span>
          <div class="expect-content">
            <h3>Private Environment</h3>
            <p>
              The studio is a private suite designed for your comfort. You'll have my full attention 
              throughout your appointment ‚Äî no waiting rooms or interruptions.
            </p>
          </div>
        </div>

        <div class="expect-item">
          <span class="expect-number">03</span>
          <div class="expect-content">
            <h3>Relaxed Atmosphere</h3>
            <p>
              Expect a peaceful, feminine space where you can relax and feel cared for. 
              Many clients describe the experience as grounding and confidence-restoring.
            </p>
          </div>
        </div>

        <div class="expect-item">
          <span class="expect-number">04</span>
          <div class="expect-content">
            <h3>Professional Care</h3>
            <p>
              The studio meets all Washoe County health requirements. Sterile, single-use equipment 
              and advanced sanitation protocols ensure your safety.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section--dark cta-location">
    <div class="container text-center">
      <h2>Ready to Visit?</h2>
      <p class="cta-text">
        Book your consultation today and take the first step toward feeling confident in your skin.
      </p>
      <div class="cta-buttons">
        <Button href="/contact" variant="primary" size="large">Book Consultation</Button>
        <Button href="/services" variant="outline" size="large">View Services</Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Location Grid */
  .location-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--spacing-xl);
    align-items: start;
  }

  @media (max-width: 900px) {
    .location-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Location Card */
  .location-card {
    background: var(--color-cream);
    border: 1px solid rgba(139, 129, 120, 0.15);
    border-radius: var(--radius-lg);
    padding: var(--spacing-xl);
  }

  .location-card__header {
    display: flex;
    align-items: center;
    gap: var(--spacing-sm);
    margin-bottom: var(--spacing-lg);
  }

  .location-card__icon {
    font-size: 1.5rem;
  }

  .location-card__header h2 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    margin: 0;
  }

  .location-card__details {
    margin-bottom: var(--spacing-lg);
  }

  .location-detail {
    padding: var(--spacing-sm) 0;
    border-bottom: 1px solid rgba(139, 129, 120, 0.15);
  }

  .location-detail:last-child {
    border-bottom: none;
  }

  .location-detail__label {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-taupe);
    margin-bottom: 0.25rem;
  }

  .location-detail__value {
    font-size: 1rem;
    color: var(--color-charcoal);
  }

  .location-detail__value em {
    font-size: 0.85rem;
    color: var(--color-taupe);
  }

  .location-card__note {
    background: var(--color-cream-dark);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-lg);
  }

  .location-card__note p {
    font-size: 0.9rem;
    color: var(--color-brown-light);
    margin: 0;
  }

  /* Map Placeholder */
  .map-container {
    height: 100%;
    min-height: 400px;
  }

  .map-placeholder {
    width: 100%;
    height: 100%;
    min-height: 400px;
    background: linear-gradient(135deg, var(--color-cream-dark) 0%, var(--color-cream) 100%);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(139, 129, 120, 0.15);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .map-placeholder__content {
    text-align: center;
    color: var(--color-taupe);
    padding: var(--spacing-xl);
  }

  .map-placeholder__content svg {
    margin-bottom: var(--spacing-md);
    opacity: 0.5;
  }

  .map-placeholder__content span {
    display: block;
    font-family: var(--font-heading);
    font-size: 1.25rem;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-sm);
  }

  .map-placeholder__content p {
    font-size: 0.9rem;
    max-width: 300px;
    margin: 0;
  }

  /* Service Areas */
  .areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
  }

  .area-card {
    background: var(--color-cream);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    border: 1px solid rgba(139, 129, 120, 0.15);
    text-align: center;
    transition: all var(--transition-fast);
  }

  .area-card:hover {
    border-color: var(--color-gold);
    transform: translateY(-2px);
  }

  .area-card--highlight {
    border-color: var(--color-gold);
    background: linear-gradient(135deg, rgba(201, 168, 108, 0.1) 0%, var(--color-cream) 100%);
  }

  .area-card__name {
    font-family: var(--font-heading);
    font-size: 1.1rem;
    color: var(--color-charcoal);
    display: block;
  }

  .area-card__badge {
    display: inline-block;
    margin-top: var(--spacing-xs);
    padding: 0.25rem 0.5rem;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    background: var(--color-gold);
    color: var(--color-charcoal);
    border-radius: var(--radius-sm);
  }

  .areas-note {
    max-width: 500px;
    margin: 0 auto;
  }

  .areas-note p {
    font-size: 0.95rem;
    color: var(--color-brown-light);
  }

  .areas-note a {
    color: var(--color-gold);
    font-weight: 600;
  }

  /* What to Expect */
  .expect-list {
    margin-top: var(--spacing-2xl);
  }

  .expect-item {
    display: flex;
    gap: var(--spacing-lg);
    padding: var(--spacing-lg) 0;
    border-bottom: 1px solid rgba(139, 129, 120, 0.15);
  }

  .expect-item:last-child {
    border-bottom: none;
  }

  .expect-number {
    flex-shrink: 0;
    font-family: var(--font-heading);
    font-size: 2rem;
    font-weight: 300;
    color: var(--color-gold);
    line-height: 1;
  }

  .expect-content h3 {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-xs);
  }

  .expect-content p {
    font-size: 0.95rem;
    color: var(--color-brown-light);
    line-height: 1.7;
    margin: 0;
  }

  /* CTA */
  .cta-text {
    font-size: 1.1rem;
    color: var(--color-taupe);
    max-width: 500px;
    margin: 0 auto var(--spacing-xl);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .section-header {
    margin-bottom: var(--spacing-2xl);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--color-taupe);
    margin-top: var(--spacing-sm);
  }
</style>
