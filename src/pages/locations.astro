---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Button from '../components/Button.astro';

const serviceAreas = [
  { name: 'Sparks', highlight: true },
  { name: 'Reno', highlight: true },
  { name: 'Spanish Springs', highlight: false },
  { name: 'Sun Valley', highlight: false },
  { name: 'South Reno', highlight: false },
  { name: 'North Valleys', highlight: false },
  { name: 'Fernley', highlight: false },
  { name: 'Washoe County', highlight: true },
];

const expectations = [
  {
    number: '01',
    title: 'Arrival',
    description: "You'll receive the full studio address via email/text when you book. Free parking is available, and the studio is easily accessible."
  },
  {
    number: '02',
    title: 'Private Environment',
    description: "The studio is a private suite designed for your comfort. You'll have my full attention throughout your appointment."
  },
  {
    number: '03',
    title: 'Relaxed Atmosphere',
    description: 'Expect a peaceful, feminine space where you can relax and feel cared for. Many clients describe it as grounding and confidence-restoring.'
  },
  {
    number: '04',
    title: 'Professional Care',
    description: 'The studio meets all Washoe County health requirements. Sterile, single-use equipment ensures your safety.'
  }
];
---

<Layout 
  title="Location - Sparks, NV | Revivelle Ink"
  description="Visit Revivelle Ink in Sparks, Nevada. Serving clients from Sparks, Reno, Spanish Springs, and all of Washoe County for stretch mark and scar camouflage."
>
  <Hero 
    title="Visit Revivelle Ink"
    subtitle="Conveniently located in Sparks, Nevada â€” serving the greater Reno area"
    dark={true}
    size="medium"
  />

  <!-- Location Section -->
  <section class="section location-section">
    <div class="container">
      <div class="location-grid">
        <!-- Location Card -->
        <div class="location-card">
          <div class="location-card__gold-accent"></div>
          <div class="location-card__header">
            <div class="location-card__icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path><circle cx="12" cy="10" r="3"></circle></svg>
            </div>
            <h2>Sparks, Nevada</h2>
          </div>
          
          <div class="location-card__details">
            <div class="location-detail">
              <span class="location-detail__label">Address</span>
              <span class="location-detail__value">
                2165 Green Vista Dr 206B<br/>Sparks, NV 89431
              </span>
            </div>
            
            <div class="location-detail">
              <span class="location-detail__label">Studio Type</span>
              <span class="location-detail__value">Private Suite</span>
            </div>
            
            <div class="location-detail">
              <span class="location-detail__label">Parking</span>
              <span class="location-detail__value">Free parking available</span>
            </div>
          </div>

          <div class="location-card__note">
            <span class="location-card__note-icon">
              <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="3" y="11" width="18" height="11" rx="2" ry="2"></rect><path d="M7 11V7a5 5 0 0 1 10 0v4"></path></svg>
            </span>
            <p>
              <strong>Private Studio:</strong> A comfortable, private suite designed for your comfort and privacy.
            </p>
          </div>

          <Button href="tel:17076600921" variant="gold-glow" fullWidth>Free Consult</Button>
        </div>

        <!-- Map Placeholder -->
        <div class="map-container">
          <div class="map-placeholder">
            <div class="map-placeholder__glow"></div>
            <div class="map-placeholder__content">
              <div class="map-placeholder__pin">
                <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
              </div>
              <h3>Sparks, Nevada</h3>
              <p>Located in the heart of Sparks, easily accessible from Reno and surrounding areas.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Service Areas Section -->
  <section class="section section--gold-tint service-areas-section">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-eyebrow">Our Reach</span>
        <h2>Serving Northern Nevada</h2>
        <p class="section-subtitle">
          Revivelle Ink proudly provides camouflage tattooing and inkless scar revision to clients throughout the region.
        </p>
      </div>

      <div class="areas-grid">
        {serviceAreas.map((area, i) => (
          <div 
            class={`area-card ${area.highlight ? 'area-card--highlight' : ''}`}
            style={`animation-delay: ${i * 0.08}s`}
          >
            <span class="area-card__name">{area.name}</span>
            {area.highlight && <span class="area-card__badge">Primary</span>}
          </div>
        ))}
      </div>

      <div class="areas-note text-center">
        <p>
          Don't see your area listed? If you're within reasonable driving distance, I'd still love to help you. 
          <a href="/contact">Reach out</a> and let's chat!
        </p>
      </div>
    </div>
  </section>

  <!-- What to Expect Section -->
  <section class="section expect-section">
    <div class="container container--narrow">
      <div class="section-header text-center">
        <span class="section-eyebrow">Your Experience</span>
        <h2>What to Expect When You Visit</h2>
      </div>
      
      <div class="expect-list">
        {expectations.map((item, i) => (
          <div class="expect-item" style={`animation-delay: ${i * 0.1}s`}>
            <div class="expect-number">{item.number}</div>
            <div class="expect-content">
              <h3>{item.title}</h3>
              <p>{item.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section section--dark cta-location">
    <div class="cta-location__particles">
      {Array.from({ length: 10 }).map((_, i) => (
        <div 
          class="cta-particle" 
          style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 6}s;`}
        />
      ))}
    </div>
    <div class="container text-center">
      <span class="section-eyebrow section-eyebrow--light">Start Your Journey</span>
      <h2>Ready to Visit?</h2>
      <p class="cta-text">
        Book your consultation today and take the first step toward feeling confident in your skin.
      </p>
      <div class="cta-buttons">
        <Button href="tel:17076600921" variant="gold-glow" size="large">Free Consult</Button>
        <Button href="/services" variant="outline" size="large">View Services</Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .section-eyebrow {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .section-eyebrow--light {
    color: var(--color-blush);
  }

  /* Location Grid */
  .location-grid {
    display: grid;
    grid-template-columns: 1fr 1.5fr;
    gap: var(--spacing-xl);
    align-items: start;
  }

  @media (max-width: 900px) {
    .location-grid {
      grid-template-columns: 1fr;
    }
  }

  /* Location Card */
  .location-card {
    position: relative;
    background: linear-gradient(180deg, var(--color-cream) 0%, #faf8f5 100%);
    border: 1px solid rgba(201, 168, 108, 0.15);
    border-radius: var(--radius-xl);
    padding: var(--spacing-xl);
    padding-top: calc(var(--spacing-xl) + 4px);
    overflow: hidden;
    transition: all 0.5s cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow: 
      0 4px 6px rgba(0, 0, 0, 0.02),
      0 10px 20px rgba(0, 0, 0, 0.02);
  }

  .location-card:hover {
    transform: translateY(-8px);
    box-shadow: 
      0 20px 40px rgba(201, 168, 108, 0.15),
      0 10px 20px rgba(0, 0, 0, 0.05);
    border-color: rgba(201, 168, 108, 0.3);
  }

  .location-card__gold-accent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-gold);
    transform: scaleX(0.3);
    transform-origin: left;
    transition: transform 0.5s ease;
  }

  .location-card:hover .location-card__gold-accent {
    transform: scaleX(1);
  }

  .location-card__header {
    display: flex;
    align-items: center;
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-xl);
  }

  .location-card__icon {
    width: 50px;
    height: 50px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    border-radius: var(--radius-lg);
    font-size: 1.5rem;
    box-shadow: var(--shadow-gold);
  }

  .location-card__header h2 {
    font-family: var(--font-heading);
    font-size: 1.6rem;
    margin: 0;
  }

  .location-card__details {
    margin-bottom: var(--spacing-lg);
  }

  .location-detail {
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid rgba(201, 168, 108, 0.15);
  }

  .location-detail:last-child {
    border-bottom: none;
  }

  .location-detail__label {
    display: block;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--color-gold);
    margin-bottom: 0.25rem;
  }

  .location-detail__value {
    font-size: 1rem;
    color: var(--color-charcoal);
  }

  .location-detail__value em {
    font-size: 0.85rem;
    color: var(--color-taupe);
  }

  .location-card__note {
    display: flex;
    gap: var(--spacing-sm);
    background: linear-gradient(135deg, rgba(201, 168, 108, 0.08) 0%, transparent 100%);
    padding: var(--spacing-md);
    border-radius: var(--radius-md);
    margin-bottom: var(--spacing-lg);
    border: 1px solid rgba(201, 168, 108, 0.1);
  }

  .location-card__note-icon {
    flex-shrink: 0;
  }

  .location-card__note p {
    font-size: 0.9rem;
    color: var(--color-brown-light);
    margin: 0;
  }

  /* Map Placeholder */
  .map-container {
    height: 100%;
    min-height: 450px;
  }

  .map-placeholder {
    position: relative;
    width: 100%;
    height: 100%;
    min-height: 450px;
    background: linear-gradient(135deg, var(--color-cream-dark) 0%, var(--color-gold-pale) 50%, var(--color-cream-dark) 100%);
    border-radius: var(--radius-xl);
    border: 1px solid rgba(201, 168, 108, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .map-placeholder__glow {
    position: absolute;
    top: 50%;
    left: 50%;
    width: 300px;
    height: 300px;
    transform: translate(-50%, -50%);
    background: radial-gradient(circle, rgba(201, 168, 108, 0.2) 0%, transparent 70%);
    animation: glowPulse 4s ease-in-out infinite;
  }

  @keyframes glowPulse {
    0%, 100% { transform: translate(-50%, -50%) scale(1); opacity: 0.5; }
    50% { transform: translate(-50%, -50%) scale(1.2); opacity: 1; }
  }

  .map-placeholder__content {
    position: relative;
    text-align: center;
    color: var(--color-taupe);
    padding: var(--spacing-xl);
  }

  .map-placeholder__pin {
    width: 80px;
    height: 80px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    border-radius: var(--radius-lg);
    margin: 0 auto var(--spacing-lg);
    color: var(--color-charcoal);
    box-shadow: var(--shadow-gold);
    animation: float 4s ease-in-out infinite;
  }

  @keyframes float {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(-10px); }
  }

  .map-placeholder__content h3 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-sm);
  }

  .map-placeholder__content p {
    font-size: 0.95rem;
    max-width: 300px;
    margin: 0;
    line-height: 1.7;
  }

  /* Service Areas */
  .areas-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(180px, 1fr));
    gap: var(--spacing-md);
    margin-bottom: var(--spacing-2xl);
  }

  .area-card {
    position: relative;
    background: linear-gradient(180deg, var(--color-cream) 0%, #faf8f5 100%);
    padding: var(--spacing-lg);
    padding-top: calc(var(--spacing-lg) + 3px);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(201, 168, 108, 0.12);
    text-align: center;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    opacity: 0;
    animation: fadeInUp 0.5s ease forwards;
    overflow: hidden;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.02);
  }

  .area-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: var(--gradient-gold);
    transform: scaleX(0);
    transition: transform 0.4s ease;
  }

  .area-card:hover::before {
    transform: scaleX(1);
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .area-card:hover {
    border-color: rgba(201, 168, 108, 0.25);
    transform: translateY(-6px) scale(1.02);
    box-shadow: 
      0 15px 30px rgba(201, 168, 108, 0.12),
      0 5px 15px rgba(0, 0, 0, 0.04);
  }

  .area-card--highlight {
    border-color: rgba(201, 168, 108, 0.3);
    background: linear-gradient(180deg, rgba(201, 168, 108, 0.06) 0%, var(--color-cream) 100%);
  }

  .area-card--highlight::before {
    transform: scaleX(0.5);
  }

  .area-card__name {
    font-family: var(--font-heading);
    font-size: 1.15rem;
    color: var(--color-charcoal);
    display: block;
  }

  .area-card__badge {
    display: inline-block;
    margin-top: var(--spacing-xs);
    padding: 0.3rem 0.75rem;
    font-size: 0.65rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.08em;
    background: var(--gradient-gold);
    color: var(--color-charcoal);
    border-radius: var(--radius-sm);
  }

  .areas-note {
    max-width: 550px;
    margin: 0 auto;
  }

  .areas-note p {
    font-size: 1rem;
    color: var(--color-brown-light);
  }

  .areas-note a {
    color: var(--color-gold);
    font-weight: 600;
  }

  /* What to Expect */
  .expect-list {
    margin-top: var(--spacing-xl);
  }

  .expect-item {
    display: flex;
    gap: var(--spacing-lg);
    padding: var(--spacing-xl);
    margin-bottom: var(--spacing-md);
    background: linear-gradient(180deg, var(--color-cream) 0%, #faf8f5 100%);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(201, 168, 108, 0.1);
    opacity: 0;
    animation: fadeInUp 0.5s ease forwards;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .expect-item:last-child {
    margin-bottom: 0;
  }

  .expect-item:hover {
    transform: translateX(8px);
    border-color: rgba(201, 168, 108, 0.25);
    box-shadow: 0 10px 30px rgba(201, 168, 108, 0.1);
  }

  .expect-number {
    flex-shrink: 0;
    width: 54px;
    height: 54px;
    display: flex;
    align-items: center;
    justify-content: center;
    font-family: var(--font-heading);
    font-size: 1.15rem;
    font-weight: 500;
    color: var(--color-charcoal);
    background: var(--gradient-gold);
    border-radius: var(--radius-lg);
    box-shadow: 0 4px 15px rgba(201, 168, 108, 0.3);
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .expect-item:hover .expect-number {
    transform: scale(1.1) rotate(5deg);
    box-shadow: 0 6px 20px rgba(201, 168, 108, 0.4);
  }

  .expect-content h3 {
    font-family: var(--font-heading);
    font-size: 1.35rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-xs);
  }

  .expect-content p {
    font-size: 1rem;
    color: var(--color-brown-light);
    line-height: 1.8;
    margin: 0;
  }

  /* CTA */
  .cta-location {
    position: relative;
    overflow: hidden;
  }

  .cta-location__particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .cta-particle {
    position: absolute;
    bottom: -10px;
    width: 4px;
    height: 4px;
    background: var(--color-gold);
    border-radius: 50%;
    opacity: 0;
    animation: particleRise 10s ease-in-out infinite;
  }

  @keyframes particleRise {
    0%, 100% { opacity: 0; transform: translateY(0); }
    10% { opacity: 0.5; }
    90% { opacity: 0.1; }
    100% { transform: translateY(-100vh); }
  }

  .cta-text {
    font-size: 1.1rem;
    color: var(--color-taupe);
    max-width: 550px;
    margin: 0 auto var(--spacing-xl);
    line-height: 1.8;
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  .section-header {
    display: flex;
    flex-direction: column;
    align-items: center;
    margin-bottom: var(--spacing-2xl);
  }

  .section-subtitle {
    font-size: 1.1rem;
    color: var(--color-taupe);
    margin-top: var(--spacing-sm);
  }
</style>
