import Button from '../components/Button.astro';

const services = [
  {
    title: 'Stretch Mark Camouflage Tattoo',
    price: '$250 per section per session',
    description: 'A pigment-based tattoo that blends stretch marks into your natural skin tone for a smoother, more even appearance. Ideal for white/light stretch marks that have fully healed.',
    icon: 'âœ¨',
    details: [
      'Custom pigment matching to your skin tone',
      'Ideal for white, silver, or light stretch marks',
      'Long-lasting results (3-7 years)',
      '1-3 sessions typically needed'
    ]
  },
  {
    title: 'Inkless Stretch Mark Revision',
    price: '$250 per section per session',
    description: 'A pigment-free treatment using custom serums and controlled needling to stimulate collagen and soften stretch mark texture. Perfect for those who prefer a natural healing approach.',
