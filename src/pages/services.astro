---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import FAQItem from '../components/FAQItem.astro';
import Button from '../components/Button.astro';

const services = [
  {
    title: 'Stretch Mark Camouflage Tattoo',
    price: '$250 per section per session',
    description: 'A pigment-based tattoo that blends stretch marks into your natural skin tone for a smoother, more even appearance. Ideal for white/light stretch marks that have fully healed.',
    details: [
      'Custom pigment matching to your skin tone',
      'Ideal for white, silver, or light stretch marks',
      'Long-lasting results (3-7 years)',
      '1-3 sessions typically needed'
    ],
    href: '/services/stretch-mark-camouflage'
  },
  {
    title: 'Scar Camouflage / Scar Revision',
    price: '$250 per section per session',
    description: 'Improves the appearance of surgical scars, injury scars, self-harm scars, and texture irregularities through specialized paramedical tattooing techniques.',
    details: [
      'Treats C-section, tummy tuck, and surgical scars',
      'Addresses injury, trauma, and self-harm scars with gentle, compassionate care',
      'Not suitable for keloid-prone skin',
      'Scars must be fully healed (12-18 months old)'
    ],
    href: '/services/scar-camouflage'
  }
];

const processSteps = [
  {
    number: '01',
    title: 'Free Consultation',
    description: 'We discuss your goals, examine your skin, and create a personalized treatment plan tailored to your needs.'
  },
  {
    number: '02',
    title: 'Custom Treatment Plan',
    description: 'Your treatment is customized for your skin type, tone, and goals — with a careful, unhurried approach designed around your comfort.'
  },
  {
    number: '03',
    title: 'Professional Treatment',
    description: 'Using sterile equipment and proven techniques, I carefully perform your treatment in a safe, comfortable environment.'
  },
  {
    number: '04',
    title: 'Healing & Results',
    description: 'You\'ll receive detailed aftercare instructions and support throughout your healing journey for optimal results.'
  }
];

const candidateChecks = [
  'You want to reduce the appearance of stretch marks or scars',
  'You\'re looking for long-lasting, natural-looking results',
  'You want a treatment customized to your unique skin',
  'You value professional care in a comfortable setting',
  'You\'re ready to feel more confident in your skin'
];

const treatedAreas = [
  'Abdomen', 'Hips', 'Thighs', 'Buttocks',
  'Breasts', 'Arms', 'C-section scars', 'Tummy tuck scars'
];

const faqs = [
  {
    question: 'What is camouflage tattooing?',
    answer: 'Camouflage tattooing is a paramedical technique that blends stretch marks or scars into the surrounding skin using custom-matched pigment. It is designed to soften texture, reduce visibility, and create a more even appearance.'
  },
  {
    question: 'Does camouflage tattooing hurt?',
    answer: 'Most clients describe the feeling as mild scratching or vibration. Sammi works at a careful, unhurried pace to keep the experience as comfortable as possible.'
  },
  {
    question: 'How many sessions will I need?',
    answer: 'Most clients need 1–3 sessions for pigment camouflage, spaced 8–12 weeks apart to allow full healing between sessions.'
  },
  {
    question: 'How long do results last?',
    answer: 'Pigment camouflage typically lasts 3–7 years depending on your lifestyle and skin type.'
  },
  {
    question: 'Will my stretch marks be completely gone?',
    answer: 'No treatment can fully erase stretch marks, but camouflage can drastically soften their appearance and help them blend beautifully into the surrounding skin.'
  },
  {
    question: 'Do you work with self-harm scars?',
    answer: 'Yes. Self-harm scar camouflage is a specialty Sammi approaches with particular care and compassion. The studio is completely private, the pace is yours, and there are no questions you don\'t want to answer. Call to discuss — you\'re welcome here.'
  }
];
---

<Layout 
  title="Stretch Mark & Scar Camouflage Services | Revivelle Ink - Sparks, NV"
  description="Professional stretch mark camouflage and scar camouflage tattooing services in Sparks, Nevada. Natural, long-lasting results for all skin tones. Trauma-informed, private studio."
>
  <Hero 
    title="Services & Pricing"
    subtitle="Every service is tailored to your skin type, tone, texture, and personal goals."
    dark={true}
    size="medium"
  />

  <!-- Services Section -->
  <section class="section services-section services-section--compact-bottom">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-eyebrow">Our Services</span>
        <h2>Professional Paramedical Tattooing</h2>
        <p class="section-subtitle">Customized treatments for stretch marks, scars, and skin texture</p>
      </div>

      <div class="services-grid">
        {services.map((service, i) => (
          <a href={service.href} class="service-card" style={`animation-delay: ${i * 0.1}s`}>
            <div class="service-card__accent"></div>
            <div class="service-card__inner">
              <h3 class="service-card__title">{service.title}</h3>
              <p class="service-card__price">{service.price}</p>
              <p class="service-card__description">{service.description}</p>
              <div class="service-card__cta">
                <span>Learn More</span>
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <line x1="5" y1="12" x2="19" y2="12"></line>
                  <polyline points="12 5 19 12 12 19"></polyline>
                </svg>
              </div>
            </div>
          </a>
        ))}
      </div>

      <div class="services-cta-bar">
        <div class="services-cta-bar__content">
          <h3>Not sure which treatment is right for you?</h3>
          <p>Call for a free consultation and we'll help you choose the best option for your goals.</p>
        </div>
        <Button href="tel:17076600921" variant="gold-glow" size="large">
          <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" style="display: inline-block; vertical-align: middle; margin-right: 8px;">
            <path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"></path>
          </svg>
          (707) 660-0921
        </Button>
      </div>
    </div>
  </section>

  <!-- How It Works Section -->
  <section class="section section--gold-tint process-section">
    <div class="container">
      <div class="section-header text-center">
        <span class="section-eyebrow">The Process</span>
        <h2>How the Treatment Works</h2>
        <p class="section-subtitle">A step-by-step look at your transformation journey</p>
      </div>
      <div class="process-timeline">
        {processSteps.map((step, i) => (
          <div class="process-step" style={`animation-delay: ${i * 0.1}s`}>
            <div class="process-step__connector"></div>
            <div class="process-step__number">{step.number}</div>
            <div class="process-step__content">
              <h3 class="process-step__title">{step.title}</h3>
              <p class="process-step__description">{step.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Candidate Section -->
  <section class="section candidate-section candidate-section--reduced-top">
    <div class="container">
      <div class="candidate-grid">
        <div class="candidate-content">
          <span class="section-eyebrow">Who We Help</span>
          <h2>You're in the Right Place If...</h2>
          <ul class="candidate-list">
            {candidateChecks.map((check, i) => (
              <li style={`animation-delay: ${i * 0.08}s`}>
                <svg class="candidate-icon" xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round"><polyline points="20 6 9 17 4 12"></polyline></svg>
                {check}
              </li>
            ))}
          </ul>
          <p class="candidate-note">
            Safe for <strong>all skin tones</strong>. Every treatment is customized to your unique needs. Not sure if this is right for you? <strong>Call for a free consultation.</strong>
          </p>
        </div>
        <div class="areas-content">
          <h3>Areas Commonly Treated</h3>
          <div class="areas-grid">
            {treatedAreas.map((area) => (
              <span class="area-tag">{area}</span>
            ))}
          </div>
          <p class="areas-note">
            <strong>Don't see your area listed?</strong> Many other areas can be treated. Call to discuss your specific needs.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="section section--cream faq-section">
    <div class="container container--narrow">
      <div class="section-header text-center">
        <span class="section-eyebrow">Common Questions</span>
        <h2>Frequently Asked Questions</h2>
        <p class="section-subtitle">Everything you need to know about camouflage tattooing</p>
      </div>
      <div class="faq-list">
        {faqs.map((faq) => (
          <FAQItem
            question={faq.question}
            answer={faq.answer}
            open={false}
          />
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section cta-services">
    <div class="cta-services__particles">
      {Array.from({ length: 10 }).map((_, i) => (
        <div 
          class="cta-particle" 
          style={`left: ${Math.random() * 100}%; animation-delay: ${Math.random() * 6}s;`}
        />
      ))}
    </div>
    <div class="container text-center">
      <span class="section-eyebrow">Take the First Step</span>
      <h2>Ready to Begin Your Transformation?</h2>
      <p class="cta-text">
        If you're ready for smoother, more confident skin, I'd love to help you feel at home in your body again. Calling is part of the consultation process — let's discuss your goals together.
      </p>
      <div class="cta-buttons">
        <Button href="tel:17076600921" variant="gold-glow" size="large">Free Consult</Button>
        <Button href="/gallery" variant="outline" size="large">View Results</Button>
      </div>
    </div>
  </section>
</Layout>

<style>
  .section-eyebrow {
    display: block;
    font-size: 0.75rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    color: var(--color-gold);
    margin-bottom: var(--spacing-sm);
  }

  .section-eyebrow--light {
    color: var(--color-blush);
  }

  /* Reduce spacing after services section */
  .services-section--compact-bottom {
    padding-bottom: var(--spacing-xl);
  }

  /* Reduce spacing before candidate section */
  .candidate-section--reduced-top {
    padding-top: var(--spacing-2xl);
  }

  /* Services Grid */
  .services-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-lg);
    margin-bottom: var(--spacing-2xl);
    max-width: 900px;
    margin-left: auto;
    margin-right: auto;
  }

  @media (max-width: 600px) {
    .services-grid {
      grid-template-columns: 1fr;
      margin-bottom: var(--spacing-xl);
    }
  }

  .service-card {
    position: relative;
    display: block;
    background: linear-gradient(135deg, var(--color-cream) 0%, #faf8f5 100%);
    border: 1px solid rgba(201, 168, 108, 0.15);
    border-radius: var(--radius-lg);
    overflow: hidden;
    text-decoration: none;
    transition: all 0.4s cubic-bezier(0.23, 1, 0.32, 1);
    box-shadow:
      0 2px 8px rgba(0, 0, 0, 0.03),
      0 4px 12px rgba(0, 0, 0, 0.02);
    opacity: 0;
    animation: fadeInUp 0.6s ease forwards;
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }

  .service-card:hover {
    transform: translateY(-6px);
    border-color: var(--color-gold);
    box-shadow:
      0 12px 30px rgba(201, 168, 108, 0.15),
      0 8px 16px rgba(0, 0, 0, 0.06);
  }

  .service-card__accent {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: var(--gradient-gold);
    transform: scaleX(0.3);
    transform-origin: left;
    transition: transform 0.5s cubic-bezier(0.23, 1, 0.32, 1);
  }

  .service-card:hover .service-card__accent {
    transform: scaleX(1);
  }

  .service-card__inner {
    padding: var(--spacing-lg) var(--spacing-xl);
    padding-top: calc(var(--spacing-lg) + 4px);
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  .service-card__title {
    font-family: var(--font-heading);
    font-size: 1.35rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-sm);
    transition: color 0.3s ease;
    line-height: 1.3;
  }

  .service-card:hover .service-card__title {
    color: var(--color-gold-deep);
  }

  .service-card__price {
    font-family: var(--font-heading);
    font-size: 0.95rem;
    font-weight: 600;
    background: var(--gradient-gold-text);
    background-size: 200% auto;
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    margin: 0 0 var(--spacing-md) 0;
  }

  .service-card__description {
    font-size: 0.9rem;
    color: var(--color-brown-light);
    line-height: 1.6;
    margin-bottom: var(--spacing-lg);
    flex-grow: 1;
  }

  .service-card__cta {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-xs);
    padding-top: var(--spacing-md);
    border-top: 1px solid rgba(201, 168, 108, 0.15);
    font-size: 0.85rem;
    font-weight: 600;
    color: var(--color-gold);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    transition: gap var(--transition-fast);
    align-self: flex-start;
  }

  .service-card:hover .service-card__cta {
    gap: var(--spacing-sm);
  }

  .service-card__cta svg {
    transition: transform var(--transition-fast);
  }

  .service-card:hover .service-card__cta svg {
    transform: translateX(4px);
  }

  /* Services CTA Bar */
  .services-cta-bar {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-lg);
    background: linear-gradient(135deg, var(--color-charcoal) 0%, var(--color-charcoal-deep) 100%);
    border: 1px solid rgba(201, 168, 108, 0.2);
    padding: var(--spacing-lg) var(--spacing-xl);
    border-radius: var(--radius-lg);
  }

  @media (max-width: 800px) {
    .services-cta-bar {
      flex-direction: column;
      text-align: center;
      gap: var(--spacing-md);
      padding: var(--spacing-lg);
    }
  }

  .services-cta-bar__content {
    flex: 1;
  }

  .services-cta-bar h3 {
    font-family: var(--font-heading);
    font-size: 1.5rem;
    color: var(--color-cream);
    margin-bottom: var(--spacing-xs);
    line-height: 1.3;
  }

  .services-cta-bar p {
    font-size: 0.95rem;
    color: var(--color-taupe);
    line-height: 1.6;
    margin: 0;
  }

  /* Process Timeline */
  .process-timeline {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: var(--spacing-lg);
    position: relative;
  }

  .process-step {
    position: relative;
    text-align: center;
    padding: var(--spacing-lg);
    opacity: 0;
    animation: fadeInUp 0.5s ease forwards;
  }

  .process-step__number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 60px;
    height: 60px;
    font-family: var(--font-heading);
    font-size: 1.5rem;
    font-weight: 300;
    color: var(--color-charcoal);
    background: var(--gradient-gold);
    border-radius: var(--radius-full);
    margin-bottom: var(--spacing-md);
    box-shadow: var(--shadow-gold);
  }

  .process-step__title {
    font-family: var(--font-heading);
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--color-charcoal);
    margin-bottom: var(--spacing-sm);
  }

  .process-step__description {
    font-size: 0.95rem;
    color: var(--color-brown-light);
    line-height: 1.8;
    margin: 0;
  }

  /* Candidate Section */
  .candidate-grid {
    display: grid;
    grid-template-columns: 1.3fr 1fr;
    gap: var(--spacing-2xl);
    align-items: start;
  }

  @media (max-width: 900px) {
    .candidate-grid {
      grid-template-columns: 1fr;
      gap: var(--spacing-xl);
    }
  }

  @media (max-width: 600px) {
    .candidate-grid {
      gap: var(--spacing-lg);
    }
  }

  .candidate-content h2 {
    margin-bottom: var(--spacing-md);
  }

  .candidate-intro {
    font-size: 1.1rem;
    color: var(--color-brown-light);
    margin-bottom: var(--spacing-lg);
  }

  .candidate-list {
    list-style: none;
    margin-bottom: var(--spacing-lg);
  }

  .candidate-list li {
    display: flex;
    align-items: flex-start;
    gap: var(--spacing-md);
    padding: var(--spacing-md) 0;
    border-bottom: 1px solid rgba(201, 168, 108, 0.15);
    opacity: 0;
    animation: fadeInUp 0.4s ease forwards;
  }

  .candidate-list li:last-child {
    border-bottom: none;
  }

  .candidate-icon {
    flex-shrink: 0;
    width: 26px;
    height: 26px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--gradient-gold);
    color: var(--color-charcoal);
    border-radius: var(--radius-full);
    font-size: 0.75rem;
    font-weight: 700;
  }

  .candidate-note {
    font-size: 0.95rem;
    color: var(--color-brown-light);
    font-style: italic;
  }

  .areas-content {
    background: linear-gradient(135deg, var(--color-cream-dark) 0%, var(--color-gold-pale) 100%);
    padding: var(--spacing-lg);
    border-radius: var(--radius-lg);
    border: 1px solid rgba(201, 168, 108, 0.2);
  }

  @media (max-width: 600px) {
    .areas-content {
      padding: var(--spacing-md);
    }
  }

  .areas-content h3 {
    margin-bottom: var(--spacing-md);
  }

  .areas-grid {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-xs);
    margin-bottom: var(--spacing-lg);
  }

  .area-tag {
    padding: 0.6rem 1.25rem;
    background: var(--color-cream);
    border: 1px solid rgba(201, 168, 108, 0.3);
    border-radius: var(--radius-full);
    font-size: 0.85rem;
    color: var(--color-brown);
    transition: all var(--transition-fast);
  }

  .area-tag:hover {
    background: var(--gradient-gold);
    color: var(--color-charcoal);
    border-color: var(--color-gold);
  }

  .areas-note {
    font-size: 0.9rem;
    color: var(--color-taupe);
    margin: 0;
  }

  /* FAQ Section */
  .faq-list {
    background: var(--color-cream);
    border-radius: var(--radius-lg);
    padding: var(--spacing-lg);
    border: 1px solid rgba(201, 168, 108, 0.15);
    box-shadow: var(--shadow-soft);
  }

  /* CTA Section */
  .cta-services {
    position: relative;
    overflow: hidden;
    background: var(--color-cream);
  }

  .cta-services__particles {
    position: absolute;
    inset: 0;
    pointer-events: none;
  }

  .cta-particle {
    position: absolute;
    bottom: -10px;
    width: 4px;
    height: 4px;
    background: var(--color-gold);
    border-radius: 50%;
    opacity: 0;
    animation: particleRise 10s ease-in-out infinite;
  }

  @keyframes particleRise {
    0%, 100% { opacity: 0; transform: translateY(0); }
    10% { opacity: 0.5; }
    90% { opacity: 0.1; }
    100% { transform: translateY(-100vh); }
  }

  .cta-text {
    font-size: 1.15rem;
    color: var(--color-brown-light);
    max-width: 550px;
    margin: 0 auto var(--spacing-xl);
    line-height: 1.8;
  }

  .cta-services h2 {
    color: var(--color-charcoal);
  }

  .cta-buttons {
    display: flex;
    gap: var(--spacing-md);
    justify-content: center;
    flex-wrap: wrap;
  }

  @media (max-width: 600px) {
    .cta-buttons {
      flex-direction: column;
      gap: var(--spacing-sm);
    }

    .cta-text {
      font-size: 1.05rem;
    }

    .service-card__inner {
      padding: var(--spacing-md);
      padding-top: calc(var(--spacing-md) + 4px);
    }
  }
</style>
